<قصيدة>
   <عنوان>معلقة الأعشى</عنوان>

   <بيت رقم="١">
      <مصراع>ودع هريرة إن الركب مرتحل</مصراع>
      <مصراع>و هل تطيق وداعاً أيها الرجل</مصراع>
   </بيت>

   <بيت رقم="٢">
      <مصراع>غراء فرعاء مصقولٌ عوارضها</مصراع>
      <مصراع>تمشي الهوينى كما يمشي الوجي الوحل</مصراع>
   </بيت>

   <بيت رقم="٣">
      <مصراع>كأن مشيتها من بيت جارتها</مصراع>
      <مصراع>مر السحابة لا ريثٌ و لا عجل</مصراع>
   </بيت>

   <بيت رقم="٤">
      <مصراع>تسمع للحلي وسواساً إذا انصرفت</مصراع>
      <مصراع>كما استعان بريحٍ عشرقٌ زجل</مصراع>
   </بيت>

   <بيت رقم="٥">
      <مصراع>ليست كمن يكره الجيران طلعتها</مصراع>
      <مصراع>و لا تراها لسر الجار تختتل</مصراع>
   </بيت>

   <بيت رقم="٦">
      <مصراع>يكاد يصرعها لولا تشددها</مصراع>
      <مصراع>إذا تقوم إلى جاراتها الكسل</مصراع>
   </بيت>

   <بيت رقم="٧">
      <مصراع>إذا تلاعب قرناً ساعةً فترت</مصراع>
      <مصراع>و ارتج منها ذنوب المتن و الكفل</مصراع>
   </بيت>

   <بيت رقم="٨">
      <مصراع>صفر الوشاح و ملء الدرع بهكنةٌ</مصراع>
      <مصراع>إذا تأتى يكاد الخصر ينخزل</مصراع>
   </بيت>

   <بيت رقم="٩">
      <مصراع>نعم الضجيع غداة الدجن يصرعها</مصراع>
      <مصراع>للذة المرء لا جافٍ و لا تفل</مصراع>
   </بيت>

   <بيت رقم="١٠">
      <مصراع>هركولةٌ ، فنقٌ ، درمٌ مرافقها</مصراع>
      <مصراع>كأن أخمصها بالشوك ينتعل</مصراع>
   </بيت>

   <بيت رقم="١١">
      <مصراع>إذا تقوم يضوع المسك أصورةً</مصراع>
      <مصراع>و الزنبق الورد من أردانها شمل</مصراع>
   </بيت>

   <بيت رقم="١٢">
      <مصراع>ما روضةٌ من رياض الحزن معشبةٌ</مصراع>
      <مصراع>خضراء جاد عليها مسبلٌ هطل</مصراع>
   </بيت>

   <بيت رقم="١٣">
      <مصراع>يضاحك الشمس منها كوكبٌ شرقٌ</مصراع>
      <مصراع>مؤزرٌ بعميم النبت مكتهل</مصراع>
   </بيت>

   <بيت رقم="١٤">
      <مصراع>يوماً بأطيب منها نشر رائحةٍ</مصراع>
      <مصراع>و لا بأحسن منها إذ دنا الأصل</مصراع>
   </بيت>

   <بيت رقم="١٥">
      <مصراع>علقتها عرضاً و علقت رجلاً</مصراع>
      <مصراع>غيري و علق أخرى غيرها الرجل</مصراع>
   </بيت>

   <بيت رقم="١٦">
      <مصراع>و علقته فتاة ما يحاولها</مصراع>
      <مصراع>و من بني عمها ميت بها وهل</مصراع>
   </بيت>

   <بيت رقم="١٧">
      <مصراع>و علقتني أخيرى ما تلائمني</مصراع>
      <مصراع>فاجتمع الحب ، حبٌ كله تبل</مصراع>
   </بيت>

   <بيت رقم="١٨">
      <مصراع>فكلنا مغرمٌ يهذي بصاحبه</مصراع>
      <مصراع>ناءٍ و دانٍ و مخبولٌ و مختبل</مصراع>
   </بيت>

   <بيت رقم="١٩">
      <مصراع>صدت هريرة عنا ما تكلمنا</مصراع>
      <مصراع>جهلاً بأم خليدٍ حبل من تصل</مصراع>
   </بيت>

   <بيت رقم="٢٠">
      <مصراع>أ أن رأت رجلاً أعشى أضر به</مصراع>
      <مصراع>ريب المنون و دهرٌ مفندٌ خبل</مصراع>
   </بيت>

   <بيت رقم="٢١">
      <مصراع>قالت هريرة لما جئت طالبها</مصراع>
      <مصراع>ويلي عليك و ويلي منك يا رجل</مصراع>
   </بيت>

   <بيت رقم="٢٢">
      <مصراع>إما ترينا حفاةً لانعال لنا</مصراع>
      <مصراع>إنا كذلك ما نحفى و ننتعل</مصراع>
   </بيت>

   <بيت رقم="٢٣">
      <مصراع>و قد أخالس رب البيت غفلته</مصراع>
      <مصراع>و قد يحاذر مني ثم ما يئل</مصراع>
   </بيت>

   <بيت رقم="٢٤">
      <مصراع>وقد أقود الصبا يوماً فيتبعني</مصراع>
      <مصراع>وقد يصاحبني ذو الشرة الغزل</مصراع>
   </بيت>

   <بيت رقم="٢٥">
      <مصراع>وقد غدوت إلى الحانوت يتبعني</مصراع>
      <مصراع>شاوٍ مشلٌ شلولٌ شلشلٌ شول</مصراع>
   </بيت>

   <بيت رقم="٢٦">
      <مصراع>في فتيةٍ كسيوف الهند قد علموا</مصراع>
      <مصراع>أن هالكٌ كل من يحفى و ينتعل</مصراع>
   </بيت>

   <بيت رقم="٢٧">
      <مصراع>نازعتهم قضب الريحان متكئاً</مصراع>
      <مصراع>و قهوةً مزةً راووقها خضل</مصراع>
   </بيت>

   <بيت رقم="٢٨">
      <مصراع>لا يستفيقون منها و هي راهنةٌ</مصراع>
      <مصراع>إلا بهات و إن علوا و إن نهلوا</مصراع>
   </بيت>

   <بيت رقم="٢٩">
      <مصراع>يسعى بها ذو زجاجاتٍ له نطفٌ</مصراع>
      <مصراع>مقلصٌ أسفل السربال معتمل</مصراع>
   </بيت>

   <بيت رقم="٣٠">
      <مصراع>و مستجيبٍ تخال الصنج يسمعه</مصراع>
      <مصراع>إذا ترجع فيه القينة الفضل</مصراع>
   </بيت>

   <بيت رقم="٣١">
      <مصراع>الساحبات ذيول الريط آونةً</مصراع>
      <مصراع>و الرافعات على أعجازها العجل</مصراع>
   </بيت>

   <بيت رقم="٣٢">
      <مصراع>من كل ذلك يومٌ قد لهوت به</مصراع>
      <مصراع>و في التجارب طول اللهو و الغزل</مصراع>
   </بيت>

   <بيت رقم="٣٣">
      <مصراع>و بلدةٍ مثل ظهر الترس موحشةٍ</مصراع>
      <مصراع>للجن بالليل في حافاتها زجل</مصراع>
   </بيت>

   <بيت رقم="٣٤">
      <مصراع>لا يتنمى لها بالقيظ يركبها</مصراع>
      <مصراع>إلا الذين لهم فيها أتوا مهل</مصراع>
   </بيت>

   <بيت رقم="٣٥">
      <مصراع>جاوزتها بطليحٍ جسرةٍ سرحٍ</مصراع>
      <مصراع>في مرفقيها ـ إذا استعرضتها ـ فتل</مصراع>
   </بيت>

   <بيت رقم="٣٦">
      <مصراع>بل هل ترى عارضاً قد بت أرمقه</مصراع>
      <مصراع>كأنما البرق في حافاته شعل</مصراع>
   </بيت>

   <بيت رقم="٣٧">
      <مصراع>له ردافٌ و جوزٌ مفأمٌ عملٌ</مصراع>
      <مصراع>منطقٌ بسجال الماء متصل</مصراع>
   </بيت>

   <بيت رقم="٣٨">
      <مصراع>لم يلهني اللهو عنه حين أرقبه</مصراع>
      <مصراع>و لا اللذاذة في كأس و لا شغل</مصراع>
   </بيت>

   <بيت رقم="٣٩">
      <مصراع>فقلت للشرب في درنا و قد ثملوا</مصراع>
      <مصراع>شيموا و كيف يشيم الشارب الثمل</مصراع>
   </بيت>

   <بيت رقم="٤٠">
      <مصراع>قالوا نمارٌ ، فبطن الخال جادهما</مصراع>
      <مصراع>فالعسجديةٌ فالأبلاء فالرجل</مصراع>
   </بيت>

   <بيت رقم="٤١">
      <مصراع>فالسفح يجري فخنزيرٌ فبرقته</مصراع>
      <مصراع>حتى تدافع منه الربو فالحبل</مصراع>
   </بيت>

   <بيت رقم="٤٢">
      <مصراع>حتى تحمل منه الماء تكلفةً</مصراع>
      <مصراع>روض القطا فكثيب الغينة السهل</مصراع>
   </بيت>

   <بيت رقم="٤٣">
      <مصراع>يسقي دياراً لها قد أصبحت غرضاً</مصراع>
      <مصراع>زوراً تجانف عنها القود و الرسل</مصراع>
   </بيت>

   <بيت رقم="٤٤">
      <مصراع>أبلغ يزيد بني شيبان مألكةً</مصراع>
      <مصراع>أبا ثبيتٍ أما تنفك تأتكل</مصراع>
   </بيت>

   <بيت رقم="٤٥">
      <مصراع>ألست منتهياً عن نحت أثلتنا</مصراع>
      <مصراع>و لست ضائرها ما أطت الإبل</مصراع>
   </بيت>

   <بيت رقم="٤٦">
      <مصراع>كناطح صخرةً يوماً ليوهنها</مصراع>
      <مصراع>فلم يضرها و أوهن قرنه الوعل</مصراع>
   </بيت>

   <بيت رقم="٤٧">
      <مصراع>تغري بنا رهط مسعودٍ و إخوته</مصراع>
      <مصراع>يوم للقاء فتردي ثم تعتزل</مصراع>
   </بيت>

   <بيت رقم="٤٨">
      <مصراع>تلحم أبناء ذي الجدين إن غضبوا</مصراع>
      <مصراع>أرماحنا ثم تلقاهم و تعتزل</مصراع>
   </بيت>

   <بيت رقم="٤٩">
      <مصراع>لا تقعدن وقد أكلتها خطباً</مصراع>
      <مصراع>تعوذ من شرها يوماً و تبتهل</مصراع>
   </بيت>

   <بيت رقم="٥٠">
      <مصراع>سائل بني أسدٍ عنا فقد علموا</مصراع>
      <مصراع>أن سوف يأتيك من أبنائنا شكل</مصراع>
   </بيت>

   <بيت رقم="٥١">
      <مصراع>و اسأل قشيراً و عبد الله كلهم</مصراع>
      <مصراع>و اسأل ربيعة عنا كيف نفتعل</مصراع>
   </بيت>

   <بيت رقم="٥٢">
      <مصراع>إنا نقاتلهم حتى نقتلهم</مصراع>
      <مصراع>عند اللقاء و إن جاروا و إن جهلوا</مصراع>
   </بيت>

   <بيت رقم="٥٣">
      <مصراع>قد كان في آل كهفٍ إن هم احتربوا</مصراع>
      <مصراع>والجاشرية من يسعى و ينتضل</مصراع>
   </بيت>

   <بيت رقم="٥٤">
      <مصراع>لئن قتلتم عميداً لم يكن صدداً</مصراع>
      <مصراع>لنقتلن مثله منكم فنمتثل</مصراع>
   </بيت>

   <بيت رقم="٥٥">
      <مصراع>لئن منيت بنا عن غب معركةٍ</مصراع>
      <مصراع>لا تلفنا عن دماء القوم ننتقل</مصراع>
   </بيت>

   <بيت رقم="٥٦">
      <مصراع>لا تنتهون و لن ينهى ذوي شططٍ</مصراع>
      <مصراع>كالطعن يذهب فيه الزيت و الفتل</مصراع>
   </بيت>

   <بيت رقم="٥٧">
      <مصراع>حتى يظل عميد القوم مرتفقاً</مصراع>
      <مصراع>يدفع بالراح عنه نسوةٌ عجل</مصراع>
   </بيت>

   <بيت رقم="٥٨">
      <مصراع>أصابه هندوانٌي فأقصده</مصراع>
      <مصراع>أو ذابلٌ من رماح الخط معتدل</مصراع>
   </بيت>

   <بيت رقم="٥٩">
      <مصراع>كلا زعمتم بأنا لا نقاتلكم</مصراع>
      <مصراع>إنا لأمثالكم يا قومنا قتل</مصراع>
   </بيت>

   <بيت رقم="٦٠">
      <مصراع>نحن الفوارس يوم الحنو ضاحيةً</مصراع>
      <مصراع>جنبي فطيمة لا ميلٌ و لا عزل</مصراع>
   </بيت>

   <بيت رقم="٦١">
      <مصراع>قالوا الطعان فقلنا تلك عادتنا</مصراع>
      <مصراع>أو تنزلون فإنا معشرٌ نزل</مصراع>
   </بيت>

   <بيت رقم="٦٢">
      <مصراع>قد نخضب العير في مكنون فائله</مصراع>
      <مصراع>و قد يشيط على أرماحنا البطل</مصراع>
   </بيت>

</قصيدة>
