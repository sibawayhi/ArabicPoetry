<قصيدة>
   <عنوان>مُعَلَّقَةُ عَبِيْدِ الْأَبْرَصِ</عنوان>

   <بيت رقم="١">
      <مصراع>فالقُطبيَّات فالذَّنوبُ</مصراع>
      <مصراع>أقفرَ من أهلهِ مَلْحوبُ</مصراع>
   </بيت>

   <بيت رقم="٢">
      <مصراع>فَذاتَ فَرقَينِ فالقَلِيبُ</مصراع>
      <مصراع>فَراكِسٌ فثُعَيلٍباتٌ</مصراع>
   </بيت>

   <بيت رقم="٣">
      <مصراع>لَيسَ بِها مِنهُمُ عَريبُ</مصراع>
      <مصراع>فَعَرْدةٌ ، فَقَفا حِبِرٍّ</مصراع>
   </بيت>

   <بيت رقم="٤">
      <مصراع>وغًيَّرتْ حالَها الخُطُوبُ</مصراع>
      <مصراع>وبُدِّلَتْ مِنْ أهْلِها وُحوشًا</مصراع>
   </بيت>

   <بيت رقم="٥">
      <مصراع>فَكُلُّ من حَلَّها مَحْروبُ</مصراع>
      <مصراع>أرضٌ تَوارَثَها الجُدوبُ</مصراع>
   </بيت>

   <بيت رقم="٦">
      <مصراع>والشَّيْبُ شَيْنٌ لِمَنْ يَشِيبُ</مصراع>
      <مصراع>إمَّا قَتيلاً وإمَّا هَلْكًا</مصراع>
   </بيت>

   <بيت رقم="٧">
      <مصراع>كأنَّ شَأنَيهِما شَعِيبُ</مصراع>
      <مصراع>عَيناكَ دَمْعُهما سَروبٌ</مصراع>
   </بيت>

   <بيت رقم="٨">
      <مصراع>مِنْ هَضْبةٍ دونَها لَهوبُ</مصراع>
      <مصراع>واهِيةٌ أو مَعينُ مَعْنٍ</مصراع>
   </بيت>

   <بيت رقم="٩">
      <مصراع>لِلماءِ مِنْ تَحْتِها قَسيبُ</مصراع>
      <مصراع>أو فَلْجُ وادٍ بِبَطْنِ أرضٍ</مصراع>
   </بيت>

   <بيت رقم="١٠">
      <مصراع>لِلماءِ مِنْ تَحتِها سَكوبُ</مصراع>
      <مصراع>أوْ جَدولٌ في ظِلالِ نَخْلٍ</مصراع>
   </بيت>

   <بيت رقم="١١">
      <مصراع>أنَّي وقَد راعَكَ المَشيبُ</مصراع>
      <مصراع>تَصْبو وأنَّى لكَ التَّصابي ؟</مصراع>
   </بيت>

   <بيت رقم="١٢">
      <مصراع>فلا بَدِيٌّ ولا عَجيبُ</مصراع>
      <مصراع>فإنْ يَكُنْ حالَ أجْمَعِها</مصراع>
   </بيت>

   <بيت رقم="١٣">
      <مصراع>وعادَها المَحْلُ والجُدوبُ</مصراع>
      <مصراع>أوْ يكُ أقْفَرَ مِنها جَوُّها</مصراع>
   </بيت>

   <بيت رقم="١٤">
      <مصراع>وكُلُّ ذي أمَلٍ مَكذوبُ</مصراع>
      <مصراع>فكُلُّ ذي نِعْمةٍ مَخلوسٌ</مصراع>
   </بيت>

   <بيت رقم="١٥">
      <مصراع>وكُلُّ ذي سَلْبٍ مَسْلوبُ</مصراع>
      <مصراع>فكُلُّ ذي إبِلٍ مَوْروثٌ</مصراع>
   </بيت>

   <بيت رقم="١٦">
      <مصراع>وغائِبُ المَوْتِ لا يَغيبُ</مصراع>
      <مصراع>فكُلُّ ذي غَيْبةٍ يَؤوبُ</مصراع>
   </بيت>

   <بيت رقم="١٧">
      <مصراع>أوْ غانِمٌ مِثْلُ مَنْ يَخيبُ</مصراع>
      <مصراع>أعاقِرٌ مِثْلُ ذاتِ رَحْمٍ</مصراع>
   </بيت>

   <بيت رقم="١٨">
      <مصراع>وسائِلُ اللهِ لا يَخيبُ</مصراع>
      <مصراع>مَنْ يَسْألِ النَّاسَ يَحْرِمُوهُ</مصراع>
   </بيت>

   <بيت رقم="١٩">
      <مصراع>والقَوْلُ في بعضِهٍِ تَلغيبُ</مصراع>
      <مصراع>باللهِ يُدْرَكُ كُلُّ خَيْرٍ</مصراع>
   </بيت>

   <بيت رقم="٢٠">
      <مصراع>علاَّمُ ما أخْفَتِ القُلُوبُ</مصراع>
      <مصراع>واللهُ ليسَ لهُ شَريكٌ</مصراع>
   </بيت>

   <بيت رقم="٢١">
      <مصراع>فِ وقَدْ يُخْدَعُ الأرِيبُ</مصراع>
      <مصراع>أفْلِحْ بِما شِئْتَ قدْ يَبلُغُ بالضَّعْ</مصراع>
   </بيت>

   <بيت رقم="٢٢">
      <مصراع>دَهْرُ ولا يَنْفَعُ التَّلْبِيبُ</مصراع>
      <مصراع>يَعِظُ النَّاسُ مَنْ لا يَعِظُ الدْ</مصراع>
   </بيت>

   <بيت رقم="٢٣">
      <مصراع>بُ وكمْ يُصَيِّرْنَ شائنًا حَبِيبُ</مصراع>
      <مصراع>إلاَّ سَجِيَّاتُ ما القُلُو</مصراع>
   </بيت>

   <بيت رقم="٢٤">
      <مصراع>ولا تَقُلْ إنَّني غَريبُ</مصراع>
      <مصراع>ساعِدْ بِأرضٍ إنْ كُنتَ فيها</مصراع>
   </بيت>

   <بيت رقم="٢٥">
      <مصراع>يُقْطَعُ ذو السُّهْمَةِ القَريبُ</مصراع>
      <مصراع>قدْ يُوصَلُ النَّازِحُ النَّائي وقد</مصراع>
   </بيت>

   <بيت رقم="٢٦">
      <مصراع>طُولُ الحَياةِ لهُ تَعْذيبُ</مصراع>
      <مصراع>والمَرْءُ ما عاشَ في تَكْذيبٍ</مصراع>
   </بيت>

   <بيت رقم="٢٧">
      <مصراع>سَبيلُهُ خائفٌ جَدِيبُ</مصراع>
      <مصراع>يا رُبَّ ماءٍ وَرَدتُّ آجِنٍ</مصراع>
   </بيت>

   <بيت رقم="٢٨">
      <مصراع>لِلقَلبِ مِنْ خَوْفِهِ وَجِيبُ</مصراع>
      <مصراع>رِيشُ الحَمامِ على أرْجائِهِ</مصراع>
   </بيت>

   <بيت رقم="٢٩">
      <مصراع>وصاحِبي بادِنٌ خَبوبُ</مصراع>
      <مصراع>قَطَعتهُ غُدْوة مُشِيحًا</مصراع>
   </بيت>

   <بيت رقم="٣٠">
      <مصراع>كأنَّ حارِكَها كَثِيبُ</مصراع>
      <مصراع>غَيْرانةٌ مُوجَدٌ فَقارُها</مصراع>
   </بيت>

   <بيت رقم="٣١">
      <مصراع>لا خُفَّةٌ هِيَ ولا نَيُوبُ</مصراع>
      <مصراع>أخَلَّفَ بازِلاً سَديسٌ</مصراع>
   </بيت>

   <بيت رقم="٣٢">
      <مصراع>جَوْنٌ بِصَفْحَتِهِ نُدوبُ</مصراع>
      <مصراع>كأنَّها مِنْ حَميرِ غاب</مصراع>
   </بيت>

   <بيت رقم="٣٣">
      <مصراع>تَلُطُّهُ شَمْألٌ هَبُوبُ</مصراع>
      <مصراع>أوْ شَبَبٌ يَرْتَعي الرُّخامِي</مصراع>
   </بيت>

   <بيت رقم="٣٤">
      <مصراع>تَحْمِلُني نَهْدَةٌ سَرْحوبُ</مصراع>
      <مصراع>فذاكَ عَصْرٌ وقدْ أراني</مصراع>
   </بيت>

   <بيت رقم="٣٥">
      <مصراع>يَنْشَقُّ عَنْ وَجْهِها السَّبيبُ</مصراع>
      <مصراع>مُضَبَّرٌ خَلْقُها تَضْبيرًا</مصراع>
   </بيت>

   <بيت رقم="٣٦">
      <مصراع>ولَيِّنٌ أسْرُها رَطِيبُ</مصراع>
      <مصراع>زَيْتِيَّةٌ نائمٌ عُروقُها</مصراع>
   </بيت>

   <بيت رقم="٣٧">
      <مصراع>تَيْبَسُ في وَكْرِها القُلُوبُ</مصراع>
      <مصراع>كأنَّها لِقْوَةٌ طَلُوبٌ</مصراع>
   </بيت>

   <بيت رقم="٣٨">
      <مصراع>كأنَّها شَيْخةٌ رَقُوبُ</مصراع>
      <مصراع>بَانَتْ علَى إرْمٍ عَذوبًا</مصراع>
   </بيت>

   <بيت رقم="٣٩">
      <مصراع>يَسْقُطُ عَنْ رِيشِها الضَّريبُ</مصراع>
      <مصراع>فَأَصْبَحَتْ في غَداةِ قُرٍّ</مصراع>
   </بيت>

   <بيت رقم="٤٠">
      <مصراع>ودونَهُ سَبْسَبٌ جَديبُ</مصراع>
      <مصراع>فَأبْصَرَتْ ثَعْلَبًا سَريعًا</مصراع>
   </بيت>

   <بيت رقم="٤١">
      <مصراع>وَهْيَ مِنْ نَهْضَةٍ قَريبُ</مصراع>
      <مصراع>فَنَفَّضَتْ رِيشَها ووَلَّتْ</مصراع>
   </بيت>

   <بيت رقم="٤٢">
      <مصراع>وفِعْلهُ يَفعَلُ المَذْؤوبُ</مصراع>
      <مصراع>فاشْتالَ وارْتاعَ مِنْ حَسِيسٍ</مصراع>
   </بيت>

   <بيت رقم="٤٣">
      <مصراع>وحَرَّدتْ حَرْدَهُ تَسِيبُ</مصراع>
      <مصراع>فَنَهَضَتْ نَحْوَهُ حَثِيثًا</مصراع>
   </بيت>

   <بيت رقم="٤٤">
      <مصراع>والعَيْنُ حِمْلاقُها مَقْلوبُ</مصراع>
      <مصراع>فَدَبَّ مِنْ خَلفِها دَبيبًا</مصراع>
   </بيت>

   <بيت رقم="٤٥">
      <مصراع>والصَّيْدُ مِنْ تَحْتِها مَكْروبُ</مصراع>
      <مصراع>فأدْرَكَتْهُ فَطَرَّحَتْهُ</مصراع>
   </بيت>

   <بيت رقم="٤٦">
      <مصراع>فكَدَّحَتْ وَجْهَهُ الجَبوبُ</مصراع>
      <مصراع>فَجَدَّلَتْهُ فَطَرَّحَتْهُ</مصراع>
   </بيت>

   <بيت رقم="٤٧">
      <مصراع>فأرْسَلَتْهُ وهُوَ مَكْروبُ</مصراع>
      <مصراع>فعاوَدَتْهُ فَرَفَّعَتْهُ</مصراع>
   </بيت>

   <بيت رقم="٤٨">
      <مصراع>لا بُدَّ حَيْزومُهُ مَنقُوبُ</مصراع>
      <مصراع>يَضغُو ومِخْلَبُها في دَفِهِ</مصراع>
   </بيت>

</قصيدة>
