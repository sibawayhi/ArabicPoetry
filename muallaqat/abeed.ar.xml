<قصيدة>
   <عنوان>معلقة عبيد الأبرص</عنوان>

   <بيت رقم="١">
      <مصراع>فالقُطبيَّــات فالذَّنـــوبُ</مصراع>
      <مصراع>أقفـرَ من أهلهِ مَلْحـوبُ</مصراع>
   </بيت>

   <بيت رقم="٢">
      <مصراع>فَـذاتَ فَـرقَـينِ فالقَـلِيبُ</مصراع>
      <مصراع>فَراكِـسٌ فثُعَيـلٍبــاتٌ</مصراع>
   </بيت>

   <بيت رقم="٣">
      <مصراع>لَيسَ بِها مِنهُــمُ عَـريبُ</مصراع>
      <مصراع>فَعَـرْدةٌ ، فَقَفــا حِـبِرٍّ</مصراع>
   </بيت>

   <بيت رقم="٤">
      <مصراع>وغًـيَّرتْ حالَها الخُطُــوبُ</مصراع>
      <مصراع>وبُدِّلَتْ مِنْ أهْلِها وُحوشًا</مصراع>
   </بيت>

   <بيت رقم="٥">
      <مصراع>فَكُـلُّ من حَلَّهـا مَحْـروبُ</مصراع>
      <مصراع>أرضٌ تَوارَثَهـا الجُدوبُ</مصراع>
   </بيت>

   <بيت رقم="٦">
      <مصراع>والشَّيْبُ شَـيْنٌ لِمَنْ يَشِـيبُ</مصراع>
      <مصراع>إمَّـا قَتيـلاً وإمَّـا هَلْكـًا</مصراع>
   </بيت>

   <بيت رقم="٧">
      <مصراع>كـأنَّ شَـأنَيهِمـا شَـعِيبُ</مصراع>
      <مصراع>عَينـاكَ دَمْعُهمـا سَـروبٌ</مصراع>
   </بيت>

   <بيت رقم="٨">
      <مصراع>مِنْ هَضْبـةٍ دونَها لَهـوبُ</مصراع>
      <مصراع>واهِيــةٌ أو مَعـينُ مَـعْنٍ</مصراع>
   </بيت>

   <بيت رقم="٩">
      <مصراع>لِلمـاءِ مِنْ تَحْتِهـا قَســيبُ</مصراع>
      <مصراع>أو فَلْجُ وادٍ بِبَطْـنِ أرضٍ</مصراع>
   </بيت>

   <بيت رقم="١٠">
      <مصراع>لِلمـاءِ مِنْ تَحتِهـا سَـكوبُ</مصراع>
      <مصراع>أوْ جَدولٌ في ظِلالِ نَخْـلٍ</مصراع>
   </بيت>

   <بيت رقم="١١">
      <مصراع>أنَّي وقَد راعَـكَ المَشـيبُ</مصراع>
      <مصراع>تَصْبو وأنَّى لكَ التَّصابي ؟</مصراع>
   </بيت>

   <بيت رقم="١٢">
      <مصراع>فلا بَـدِيٌّ ولا عَجـيبُ</مصراع>
      <مصراع>فإنْ يَكُـنْ حـالَ أجْمَعِهـا</مصراع>
   </بيت>

   <بيت رقم="١٣">
      <مصراع>وعادَها المَحْـلُ والجُـدوبُ</مصراع>
      <مصراع>أوْ يـكُ أقْفَـرَ مِنها جَـوُّها</مصراع>
   </بيت>

   <بيت رقم="١٤">
      <مصراع>وكُـلُّ ذي أمَـلٍ مَكـذوبُ</مصراع>
      <مصراع>فكُـلُّ ذي نِعْمـةٍ مَخلـوسٌ</مصراع>
   </بيت>

   <بيت رقم="١٥">
      <مصراع>وكُـلُّ ذي سَـلْبٍ مَسْـلوبُ</مصراع>
      <مصراع>فكُـلُّ ذي إبِـلٍ مَـوْروثٌ</مصراع>
   </بيت>

   <بيت رقم="١٦">
      <مصراع>وغـائِبُ المَـوْتِ لا يَغـيبُ</مصراع>
      <مصراع>فكُـلُّ ذي غَيْبـةٍ يَـؤوبُ</مصراع>
   </بيت>

   <بيت رقم="١٧">
      <مصراع>أوْ غـانِمٌ مِثْـلُ مَنْ يَخـيبُ</مصراع>
      <مصراع>أعاقِـرٌ مِثْـلُ ذاتِ رَحْـمٍ</مصراع>
   </بيت>

   <بيت رقم="١٨">
      <مصراع>وســــائِلُ اللهِ لا يَخـيبُ</مصراع>
      <مصراع>مَنْ يَسْـألِ النَّاسَ يَحْرِمُوهُ</مصراع>
   </بيت>

   <بيت رقم="١٩">
      <مصراع>والقَـوْلُ في بعضِـهٍِ تَلغـيبُ</مصراع>
      <مصراع>باللهِ يُـدْرَكُ كُـلُّ خَـيْرٍ</مصراع>
   </بيت>

   <بيت رقم="٢٠">
      <مصراع>عـلاَّمُ مـا أخْفَـتِ القُلُـوبُ</مصراع>
      <مصراع>واللهُ ليسَ لهُ شَــريكٌ</مصراع>
   </بيت>

   <بيت رقم="٢١">
      <مصراع>ـفِ وقَدْ يُخْـدَعُ الأرِيبُ</مصراع>
      <مصراع>أفْلِحْ بِما شِئْتَ قدْ يَبلُغُ بالضَّعْـ</مصراع>
   </بيت>

   <بيت رقم="٢٢">
      <مصراع>دَهْـرُ ولا يَنْفَـعُ التَّلْبِيبُ</مصراع>
      <مصراع>يَعِـظُ النَّاسُ مَنْ لا يَعِـظُ الدْ</مصراع>
   </بيت>

   <بيت رقم="٢٣">
      <مصراع>بُ وكمْ يُصَـيِّرْنَ شائنًا حَبِيبُ</مصراع>
      <مصراع>إلاَّ سَــجِيَّـاتُ ما القُلُـو</مصراع>
   </بيت>

   <بيت رقم="٢٤">
      <مصراع>ولا تَقُـلْ إنَّنـي غَـريبُ</مصراع>
      <مصراع>سـاعِدْ بِأرضٍ إنْ كُنتَ فيها</مصراع>
   </بيت>

   <بيت رقم="٢٥">
      <مصراع>يُقْطَـعُ ذو السُّـهْمَةِ القَـريبُ</مصراع>
      <مصراع>قدْ يُوصَلُ النَّازِحُ النَّائي وقد</مصراع>
   </بيت>

   <بيت رقم="٢٦">
      <مصراع>طُـولُ الحَيــاةِ لـهُ تَعْـذيبُ</مصراع>
      <مصراع>والمَرْءُ ما عاشَ في تَكْذيبٍ</مصراع>
   </بيت>

   <بيت رقم="٢٧">
      <مصراع>سَـــبيلُهُ خـائفٌ جَـدِيبُ</مصراع>
      <مصراع>يا رُبَّ مـاءٍ وَرَدتُّ آجِـنٍ</مصراع>
   </بيت>

   <بيت رقم="٢٨">
      <مصراع>لِلقَـلبِ مِنْ خَـوْفِـهِ وَجِـيبُ</مصراع>
      <مصراع>رِيشُ الحَمـامِ على أرْجائِهِ</مصراع>
   </بيت>

   <بيت رقم="٢٩">
      <مصراع>وصــاحِبي بـادِنٌ خَبــوبُ</مصراع>
      <مصراع>قَطَعتـهُ غُـدْوة مُشِــيحًا</مصراع>
   </بيت>

   <بيت رقم="٣٠">
      <مصراع>كـأنَّ حـارِكَهــا كَثِـيبُ</مصراع>
      <مصراع>غَـيْرانةٌ مُوجَـدٌ فَقـارُهـا</مصراع>
   </بيت>

   <بيت رقم="٣١">
      <مصراع>لا خُـفَّـةٌ هِـيَ ولا نَـيُـوبُ</مصراع>
      <مصراع>أخَـلَّفَ بـازِلاً سَـــديسٌ</مصراع>
   </بيت>

   <بيت رقم="٣٢">
      <مصراع>جَـوْنٌ بِصَفْحـَتِــهِ نُـدوبُ</مصراع>
      <مصراع>كـأنَّهـا مِنْ حَمـيرِ غـاب</مصراع>
   </بيت>

   <بيت رقم="٣٣">
      <مصراع>تَـلُـطُّـهُ شَـمْألٌ هَـبُـوبُ</مصراع>
      <مصراع>أوْ شَـبَبٌ يَـرْتَعي الرُّخامِي</مصراع>
   </بيت>

   <بيت رقم="٣٤">
      <مصراع>تَحْمِـلُنـي نَهْـدَةٌ سَـرْحوبُ</مصراع>
      <مصراع>فـذاكَ عَصْـرٌ وقدْ أرانـي</مصراع>
   </بيت>

   <بيت رقم="٣٥">
      <مصراع>يَنْشَـقُّ عَنْ وَجْهِهـا السَّـبيبُ</مصراع>
      <مصراع>مُضَـبَّرٌ خَلْـقُهـا تَضْـبيرًا</مصراع>
   </بيت>

   <بيت رقم="٣٦">
      <مصراع>ولَـيِّنٌ أسْــرُها رَطِـيبُ</مصراع>
      <مصراع>زَيْـتِـيَّـةٌ نائـمٌ عُـروقُهـا</مصراع>
   </بيت>

   <بيت رقم="٣٧">
      <مصراع>تَـيْـبَسُ في وَكْـرِها القُـلُوبُ</مصراع>
      <مصراع>كـأنَّهـا لِقْــوَةٌ طَـلُـوبٌ</مصراع>
   </بيت>

   <بيت رقم="٣٨">
      <مصراع>كـأنَّهـا شَــيْخةٌ رَقُــوبُ</مصراع>
      <مصراع>بَـانَـتْ علَى إرْمٍ عَـذوبـًا</مصراع>
   </بيت>

   <بيت رقم="٣٩">
      <مصراع>يَسْـقُطُ عَنْ رِيشِـها الضَّـريبُ</مصراع>
      <مصراع>فَأَصْـبَحَتْ في غَـداةِ قُـرٍّ</مصراع>
   </بيت>

   <بيت رقم="٤٠">
      <مصراع>ودونَـهُ سَــبْسَـبٌ جَـديـبُ</مصراع>
      <مصراع>فَأبْصَرَتْ ثَعْلَـبًا سَـريعـًا</مصراع>
   </بيت>

   <بيت رقم="٤١">
      <مصراع>وَهْـيَ مِنْ نَهْضَـةٍ قَـريـبُ</مصراع>
      <مصراع>فَنَفَّـضَتْ رِيشَـها ووَلَّـتْ</مصراع>
   </بيت>

   <بيت رقم="٤٢">
      <مصراع>وفِعْلـهُ يَفعَــلُ المَـذْؤوبُ</مصراع>
      <مصراع>فاشْـتالَ وارْتاعَ مِنْ حَسِيسٍ</مصراع>
   </بيت>

   <بيت رقم="٤٣">
      <مصراع>وحَـرَّدتْ حَـرْدَهُ تَسِــيبُ</مصراع>
      <مصراع>فَنَهَضَـتْ نَحْـوَهُ حَثِـيثـًا</مصراع>
   </بيت>

   <بيت رقم="٤٤">
      <مصراع>والعَـيْنُ حِمْـلاقُهـا مَقْلـوبُ</مصراع>
      <مصراع>فَـدَبَّ مِنْ خَلفِهـا دَبيبـًا</مصراع>
   </بيت>

   <بيت رقم="٤٥">
      <مصراع>والصَّـيْدُ مِنْ تَحْتِهـا مَكْـروبُ</مصراع>
      <مصراع>فـأدْرَكَتْـهُ فَطَـرَّحَتْــهُ</مصراع>
   </بيت>

   <بيت رقم="٤٦">
      <مصراع>فكَـدَّحَتْ وَجْهَـهُ الجَـبوبُ</مصراع>
      <مصراع>فَجَـدَّلَـتْـهُ فَطَـرَّحَتْــهُ</مصراع>
   </بيت>

   <بيت رقم="٤٧">
      <مصراع>فـأرْسَـلَـتْـهُ وهُوَ مَكْـروبُ</مصراع>
      <مصراع>فعـاوَدَتْـهُ فَـرَفَّـعَـتْـهُ</مصراع>
   </بيت>

   <بيت رقم="٤٨">
      <مصراع>لا بُـدَّ حَـيْزومُـهُ مَنقُــوبُ</مصراع>
      <مصراع>يَضغُو ومِخْلَـبُهـا في دَفِـهِ</مصراع>
   </بيت>

</قصيدة>