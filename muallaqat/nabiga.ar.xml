<قصيدة>
   <عنوان>معلقة النابغة الذبياني</عنوان>

   <بيت رقم="١">
      <مصراع>يا دارَ مَيّةَ بالعَليْاءِ فالسَّنَد</مصراع>
      <مصراع>أقْوَتْ وطَالَ عليها سالفُ الأبَدِ</مصراع>
   </بيت>

   <بيت رقم="٢">
      <مصراع>وقفتُ فيها أُصَيلانًا أُسائِلُها</مصراع>
      <مصراع>عَيَّتْ جَوابًا وما بالرَّبعِ مِن أحَدِ</مصراع>
   </بيت>

   <بيت رقم="٣">
      <مصراع>إلاّ الأواريَّ لأيًا ما أُبَيّنُهَا</مصراع>
      <مصراع>والنُّؤيُ كالحَوْضِ بالمَظلومَةِ الجَلَدِ</مصراع>
   </بيت>

   <بيت رقم="٤">
      <مصراع>رُدَّتْ عليَهِ أقاصيهِ ، ولَبَّدَهُ</مصراع>
      <مصراع>ضَرْبُ الوليدةِ بالمِسْحاة ِ في الثَّأَدِ</مصراع>
   </بيت>

   <بيت رقم="٥">
      <مصراع>خلَّتْ سَبيلَ أتيٍّ كانَ يَحبسُهُ</مصراع>
      <مصراع>ورَفَّعتْهُ إلى السَّجْفينِ فالنَّضَدِ</مصراع>
   </بيت>

   <بيت رقم="٦">
      <مصراع>أمسَتْ خَلاءً وأمسَى أهلُها احْتمَلُوا</مصراع>
      <مصراع>أخْنَى عَليها الذي أخْنَى على لُبَدِ</مصراع>
   </بيت>

   <بيت رقم="٧">
      <مصراع>فعَدِّ عَمَّا ترَى إذْ لا ارتِجاعَ لهُ</مصراع>
      <مصراع>وانْمِ القُتُودَ على عَيْرانةٍ أُجُدِ</مصراع>
   </بيت>

   <بيت رقم="٨">
      <مصراع>مَقْذوفةٍ بدَخيس النَّحْضِ بازِلُها</مصراع>
      <مصراع>له صَريفٌ صَريفَ القَعْوِ بالمَسَدِ</مصراع>
   </بيت>

   <بيت رقم="٩">
      <مصراع>كأنَّ رَحْلي وقد زالَ النّهارُ بنا</مصراع>
      <مصراع>يَومَ الجَليلِ على مُستأنِسٍ وحَدِ</مصراع>
   </بيت>

   <بيت رقم="١٠">
      <مصراع>مِن وَحشِ وَجرةَ مَوشيٍّ أكارِِعهُ</مصراع>
      <مصراع>طَاوِي المَصيرِ كَسِيفِ الصَّيقَلِ الفَرَدِ</مصراع>
   </بيت>

   <بيت رقم="١١">
      <مصراع>سَرتْ عليه مِن الجَوزاءِ سَاريةٌ</مصراع>
      <مصراع>تُزجي الشَّمالُ عليهِ جامِدَ البَرَدِ</مصراع>
   </بيت>

   <بيت رقم="١٢">
      <مصراع>فَارتاعَ مِن صَوتِ كلابٍ فباتَ لهُ</مصراع>
      <مصراع>طَوْعَ الشَّوامتِ مِن خَوْفٍ ومِن صَرَدِ</مصراع>
   </بيت>

   <بيت رقم="١٣">
      <مصراع>وكانَ ضُمْرانُ مِنهُ حيثُ يُوزِعُهُ</مصراع>
      <مصراع>طَعنَ المُعارِكِ عند المَحجَرِ النَّجُدِ</مصراع>
   </بيت>

   <بيت رقم="١٤">
      <مصراع>شكَّ الفَريصةَ بالمِدْرَى فأنفَذَها</مصراع>
      <مصراع>طَعنَ المُبَيطِرِ إذ يَشفي مِن العَضَدِ</مصراع>
   </بيت>

   <بيت رقم="١٥">
      <مصراع>كأنّهُ خارجًا من جَنبِ صَفْحَتَهِ</مصراع>
      <مصراع>سَفُّودُ شَرْبٍ نَسُوهُ عِندَ مُفْتَأدِ</مصراع>
   </بيت>

   <بيت رقم="١٦">
      <مصراع>فظَلَّ يَعجَمُ أعلَى الرَّوْقِ مُنقبضًا</مصراع>
      <مصراع>في حَالكِ اللَّوْنِ صدقٍ غَيرِ ذي أوَدِ</مصراع>
   </بيت>

   <بيت رقم="١٧">
      <مصراع>لمَّا رأى واشقٌ إقعاصَ صاحبِهِ</مصراع>
      <مصراع>ولا سَبيلَ إلى عَقلٍ ولا قَوَدِ</مصراع>
   </بيت>

   <بيت رقم="١٨">
      <مصراع>قالتْ له النفسُ : إنِّي لا أرَى طَمعًا</مصراع>
      <مصراع>وإنَّ مَوْلاكَ لم يَسْلمْ ولم يَصِدِ</مصراع>
   </بيت>

   <بيت رقم="١٩">
      <مصراع>فَتلكَ تُبلِغُني النُّعمانَ أنَّ لهُ</مصراع>
      <مصراع>فضلاً على النَّاسِ في الأدنَى وفي البَعَدِ</مصراع>
   </بيت>

   <بيت رقم="٢٠">
      <مصراع>ولا أرَى فاعِلاً في النَّاسِ يُشبِهُهُ</مصراع>
      <مصراع>ولا أُحاشِي مِن الأقْوَامِ من أحَدِ</مصراع>
   </بيت>

   <بيت رقم="٢١">
      <مصراع>إلاّ سُليمانَ إذ قالَ الإلهُ لهُ</مصراع>
      <مصراع>قًُمْ في البريَّةِ فاحْدُدْها عنِ الفَنَدِ</مصراع>
   </بيت>

   <بيت رقم="٢٢">
      <مصراع>وخيِّسِ الجِنَّ إنّي قد أَذِنْتُ لهمْ</مصراع>
      <مصراع>يَبْنُونَ تَدْمُرَ بالصُّفَّاحِ والعَمَدِ</مصراع>
   </بيت>

   <بيت رقم="٢٣">
      <مصراع>فمَنْ أطاعَكََ فانفَعْهُ بطاعتهِ</مصراع>
      <مصراع>كما أطاعَكَ وادْلُلْهُ على الرَّشَّدِ</مصراع>
   </بيت>

   <بيت رقم="٢٤">
      <مصراع>ومنْ عَصاكَ فعاقِبْهُ مُعاقَبَةً</مصراع>
      <مصراع>تَنْهَى الظَّلومَ ولا تَقعُدْ على ضَمَدِ</مصراع>
   </بيت>

   <بيت رقم="٢٥">
      <مصراع>إلاّ لِمثْلِك َ، أوْ مَنْ أنتَ سَابِقُهُ</مصراع>
      <مصراع>سبقَ الجوادِ إذا اسْتَولَى على الأمَدِ</مصراع>
   </بيت>

   <بيت رقم="٢٦">
      <مصراع>أعطَى لفارِهَةٍ حُلوٍ توابِعُها</مصراع>
      <مصراع>منَ المَواهِبِ لا تُعْطَى على نَكَدِ</مصراع>
   </بيت>

   <بيت رقم="٢٧">
      <مصراع>الواهِبُ المائَةَ المعْكاءَ زيَّنَها</مصراع>
      <مصراع>سَعْدانُ توضِحُ في أوْبارِها اللِّبَدِ</مصراع>
   </بيت>

   <بيت رقم="٢٨">
      <مصراع>والراكضَاتِ ذُيولَ الرَّيْطِ فَنَّقَها</مصراع>
      <مصراع>بَرْدُ الهَواجرِ كالغزلانِ بالجَردِ</مصراع>
   </بيت>

   <بيت رقم="٢٩">
      <مصراع>والخَيلَ تَمزَغُ غربًا في أعِنَّتِها</مصراع>
      <مصراع>كالطَّيرِ تَنجو من الشُّؤْبوبِ ذي البَرَدِ</مصراع>
   </بيت>

   <بيت رقم="٣٠">
      <مصراع>والأُدمُ قدْ خُيِّسَتْ فُتلاً مَرافِقُها</مصراع>
      <مصراع>مَشدودَةً برِحَالِ الحِيِرة ِ الجُدَدِ</مصراع>
   </بيت>

   <بيت رقم="٣١">
      <مصراع>واحْكمْ كَحُكمِ فَتاة ِ الحيِّ إذْ نَظَرتْ</مصراع>
      <مصراع>إلى حَمامِ شِراعٍ وَارِدِ الثَّمَدِ</مصراع>
   </بيت>

   <بيت رقم="٣٢">
      <مصراع>يَحفُّهُ جانبًا نيقٍ وتُتْبِعُهُ</مصراع>
      <مصراع>مِثلَ الزُّجاجَةِ لم تَكْحلْ من الرَّمَدِ</مصراع>
   </بيت>

   <بيت رقم="٣٣">
      <مصراع>قالتْ ألا لَيْتَما هذا الحَمامُ لنا</مصراع>
      <مصراع>إلى حَمامَتِنا ونِصفُهُ فَقَدِ</مصراع>
   </بيت>

   <بيت رقم="٣٤">
      <مصراع>فَحسَّبُوهُ فألْفَوْهُ كما حَسَبَتْ</مصراع>
      <مصراع>تِسعًا وتِسعينَ لم تَنقُصْ ولم تَزِدِ</مصراع>
   </بيت>

   <بيت رقم="٣٥">
      <مصراع>فَكمَّلتْ مائةً فيها حَمامتُها</مصراع>
      <مصراع>وأسْرَعتْ حِسْبةً في ذلكَ العَدَدِ</مصراع>
   </بيت>

   <بيت رقم="٣٦">
      <مصراع>فلا لَعَمْرُ الذي مَسَّحتُ كَعبتَهُ</مصراع>
      <مصراع>وما هُريقَ على الأنْصابِ من جَسَدِ</مصراع>
   </بيت>

   <بيت رقم="٣٧">
      <مصراع>والمؤمنِ العائِذاتِ الطّيرَ تمسَحُها</مصراع>
      <مصراع>رُكْبانَ مكَّة َ بينَ الغَيْلِ والسَّعَدِ</مصراع>
   </بيت>

   <بيت رقم="٣٨">
      <مصراع>ما إنْ أتيتُ بشَيءٍ أنتَ تَكْرهُهُ</مصراع>
      <مصراع>إذًا فلا رَفَعَتْ سَوْطي إليَّ يَدِي</مصراع>
   </بيت>

   <بيت رقم="٣٩">
      <مصراع>إلاّ مقالة َ أقوامٍ شَقيتُ بها</مصراع>
      <مصراع>كانَتْ مقالَتُهُمْ قَرْعًا على الكَبِدِ</مصراع>
   </بيت>

   <بيت رقم="٤٠">
      <مصراع>إذًا فَعاقبني ربِّي مُعاقبةً</مصراع>
      <مصراع>قَرَّتْ بها عَينُ منْ يأتيكَ بالفَنَدِ</مصراع>
   </بيت>

   <بيت رقم="٤١">
      <مصراع>هذا لأبرأَ مِنْ قَوْلٍ قُذِفْتُ بِهِ</مصراع>
      <مصراع>طَارَتْ نَوافِذُهُ حَرًّا على كَبِدي</مصراع>
   </بيت>

   <بيت رقم="٤٢">
      <مصراع>أُنْبِئْتُ أنَّ أبا قابوسَ أوْعَدَني</مصراع>
      <مصراع>ولا قَرارَ على زَأْرٍ منَ الأسَدِ</مصراع>
   </بيت>

   <بيت رقم="٤٣">
      <مصراع>مَهْلاً فِداءٌ لك الأقوامِ كُلّهُمُ</مصراع>
      <مصراع>وما أُثَمِّرُ من مالٍ ومنْ وَلَدِ</مصراع>
   </بيت>

   <بيت رقم="٤٤">
      <مصراع>لا تَقْذِفْني بِرُكْنٍ لا كَفاءَ لهُ</مصراع>
      <مصراع>وإنْ تَأثَّفَكَ الأعداءُ بالرَّفَدِ</مصراع>
   </بيت>

   <بيت رقم="٤٥">
      <مصراع>فما الفُراتُ إذا هَبَّ الرِّياحُ لهُ</مصراع>
      <مصراع>تَرمي أواذيُّهُ العبْرَينِ بالزَّبَدِ</مصراع>
   </بيت>

   <بيت رقم="٤٦">
      <مصراع>يَمُدُّهُ كلُّ وادٍ مُتْرَعٍ لَجِبٍ</مصراع>
      <مصراع>فيهِ رِكامٌ من اليَنْبوتِ والخَضَدِ</مصراع>
   </بيت>

   <بيت رقم="٤٧">
      <مصراع>يظَلُّ مِن خَوفِهِ المَلاَّحُ مُعتَصِمًا</مصراع>
      <مصراع>بالخَيْزرانَةِ بَعدَ الأيْنِ والنَّجَدِ</مصراع>
   </بيت>

   <بيت رقم="٤٨">
      <مصراع>يومًا بِأجْوَدَ منهُ سَيْبَ نافِلَةٍ</مصراع>
      <مصراع>ولا يَحُولُ عَطاءُ اليومِ دونَ غَدِ</مصراع>
   </بيت>

   <بيت رقم="٤٩">
      <مصراع>هذا الثَّناءُ فإنْ تَسمَعْ به حَسَنًا</مصراع>
      <مصراع>فلم أُعرِّض أبَيتَ اللّعنَ بالصَّفَدِ</مصراع>
   </بيت>

   <بيت رقم="٥٠">
      <مصراع>ها إنَّ ذي عِذرَة ٌ إلاَّ تكُنْ نَفَعَتْ</مصراع>
      <مصراع>فإنَّ صاحبَها مُشاركُ النَّكَدِ</مصراع>
   </بيت>

</قصيدة>