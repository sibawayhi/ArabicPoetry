<قصيدة>
   <عنوان>معلقة لبيد بن ربيعة</عنوان>

   <بيت رقم="١">
      <مصراع>عَفَتِ الدِّيَارُ مَحَلّهَا فَمُقَامُهَا</مصراع>
      <مصراع>بِمِنىً تَأَبَّدَ غَوْلُهَا فرِجَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢">
      <مصراع>فَمَدافِعُ الرّيَّانِ عُرِّيَ رَسْمُهَا</مصراع>
      <مصراع>خَلَقاً كما ضَمِنَ الوِحيُ سِلامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣">
      <مصراع>دِمَنٌ تَجَرَّمَ بَعْدَ عَهْدِ أَنِيسِها</مصراع>
      <مصراع>حِجَجٌ خَلَوْنَ حَلالُها وَحَرامُها</مصراع>
   </بيت>

   <بيت رقم="٤">
      <مصراع>رُزِقَتْ مَرابِيعَ الْنُّجومِ وَصَابَها</مصراع>
      <مصراع>وَدْقُ الرَّوعِدِ جَوْدُهَا فَرِ هَامُها</مصراع>
   </بيت>

   <بيت رقم="٥">
      <مصراع>مِنْ كُلِّ سارِيَةٍ وغَادٍ مُدْجِنٍ</مصراع>
      <مصراع>وَعَشِيَّةٍ مُتَجَاوِب إِرزَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٦">
      <مصراع>فَعَلا فُرُوعُ الأَيْهَقانِ وَأَطْفَلَتْ</مصراع>
      <مصراع>بالَجلْهَتَيْنِ ظِباؤُها وَنَعامُها</مصراع>
   </بيت>

   <بيت رقم="٧">
      <مصراع>وَالْعَيْنُ ساكِنَةٌ على أَطْلائِها</مصراع>
      <مصراع>عُوَذاً تَأجَّلُ بالفَضاءِ بِها مُها</مصراع>
   </بيت>

   <بيت رقم="٨">
      <مصراع>وَجَلا السّيُولُ عَنِ الْطّلولِ كأنّها</مصراع>
      <مصراع>زُبُرٌ تُجِدُّ مُتُونَها أَقْلامُها</مصراع>
   </بيت>

   <بيت رقم="٩">
      <مصراع>أَوْ رَجْعُ وَاشِمَة أُسِفَّ نَوُورهُا</مصراع>
      <مصراع>كِفَفاً تَعَرَّضَ فَوْقَهُنَّ وَشامُها</مصراع>
   </بيت>

   <بيت رقم="١٠">
      <مصراع>فَوَقَفْتُ أَسْأَلُها، وَكيفَ سُؤالُنا</مصراع>
      <مصراع>صُمّاً خَوَالِدَ ما يَبِينُ كلامُها</مصراع>
   </بيت>

   <بيت رقم="١١">
      <مصراع>عَرِيَتْ وكانَ بها الَجمِيعُ فَأبْكَرُوا</مصراع>
      <مصراع>مِنْها وَغُودِرَ نُؤْيُها وَثُمامُها</مصراع>
   </بيت>

   <بيت رقم="١٢">
      <مصراع>شَاقَتْكَ ظُعْنُ الحَيِّ حينَ تَحَمَّلوا</مصراع>
      <مصراع>فتَكَنَّسوا قُطُناً تَصِرُّ خِيَامُها</مصراع>
   </بيت>

   <بيت رقم="١٣">
      <مصراع>مِنْ كلُّ مَحْفُوفٍ يُظِلُّ عِصِيَّةُ</مصراع>
      <مصراع>زَوْجٌ عَلَيْه كِلةٌ وَقِرَامُها</مصراع>
   </بيت>

   <بيت رقم="١٤">
      <مصراع>زُجُلاً كأَنَّ نِعَاجَ تُوضِحَ فَوْقَها</مصراع>
      <مصراع>وَظِبَاءَ وَجْرَةَ عُطَّفاً أَرْآمُها</مصراع>
   </بيت>

   <بيت رقم="١٥">
      <مصراع>حُفِزَتْ وَزَايَلَها السَّرَابُ كأْنها</مصراع>
      <مصراع>أَجْرَاعُ بِيشَةَ أَثْلُها وَرِضَامُها</مصراع>
   </بيت>

   <بيت رقم="١٦">
      <مصراع>بَلْ مَا تَذَكّرُ منْ نَوَارَ وَقَدْ نَأَتْ</مصراع>
      <مصراع>وَتَقَصَّعَتْ أَسْبَابُها وَرِمَامُها</مصراع>
   </بيت>

   <بيت رقم="١٧">
      <مصراع>مُرِّيَّةٌ حَلّتْ بِفَيْدَ وَجَاوَرَتْ</مصراع>
      <مصراع>أَهْلَ الْحِجَارِ فأْيْنَ مِنْكَ مَرَامُها</مصراع>
   </بيت>

   <بيت رقم="١٨">
      <مصراع>بِمشَارِق الْجَبَلَيْنِ أَوْ بِمُحَجَّر</مصراع>
      <مصراع>فَتَضَمَّنَتْها فَرْدَةٌ فَرُخَامُهَا</مصراع>
   </بيت>

   <بيت رقم="١٩">
      <مصراع>فَصُوَائِقٌ إِنْ أَيْمَنَت فِمظَنَّةٌ</مصراع>
      <مصراع>فبها وَحَافُ الْقَهْرِ أَوْ طِلْخَامُها</مصراع>
   </بيت>

   <بيت رقم="٢٠">
      <مصراع>فَاقْطَعْ لُبَانَةَ مَنَ تَعَرَّضَ وَصْلُةُ</مصراع>
      <مصراع>وَلشَرُّ واصِلِ خُلَّةٍ صَرَّامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢١">
      <مصراع>وَأحْبُ الُمجَامِلَ باَلجزيلِ وَصَرْمُهُ</مصراع>
      <مصراع>باقٍ إِذَا ظَلَعَتْ وَزَاغَ قِوامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٢">
      <مصراع>بِطَلِيحِ أَسْفَارٍ تَرَكْنَ بَقِيَّةً</مصراع>
      <مصراع>مِنْها فَأَحْنَقَ صُلْبُهَا وَسَنامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٣">
      <مصراع>وَإِذَا تَغَالَى لَحْمُهَا وَتَحَسَّرَتْ</مصراع>
      <مصراع>وَتَقَطَّعَتْ بَعْدَ الكَلالِ خِدَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٤">
      <مصراع>فَلَهَا هِبَابٌ في الزِّمَامِ كأَنَّها</مصراع>
      <مصراع>صَهْبَاءُ خَفَّ مَعَ الْجَنُوبِ جِهَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٥">
      <مصراع>أَوْ مُلْمِعٌ وَسَقَتْ لأَحْقَبَ لاَحهُ</مصراع>
      <مصراع>طَرْدُ الْفُحُولِ وَضَرْبُهَا وَكِدامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٦">
      <مصراع>يَعْلُو بِهَا حَدَبَ الإِكَامِ مُسَتْحَجٌ</مصراع>
      <مصراع>قَدْ رَابَهُ عِصْيَانُهَا وَوِحامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٧">
      <مصراع>بِأَجِزَّةِ الثَّلَبُوتِ يَرْبَأُ فَوْقَهَا</مصراع>
      <مصراع>قَفْرَ الَمراقِبِ خَوْفُهَا آرَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٨">
      <مصراع>حَتَّى إِذَا سَلَخَا جُمَادَى سِتَّةً</مصراع>
      <مصراع>جَزَآ فَطَالَ صِيَامُهُ وَصِيَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٢٩">
      <مصراع>رَجَعَا بِأَمْرِهِمَا إِلَى ذِي مِرَّةٍ</مصراع>
      <مصراع>حَصِدٍ وَنُجْعُ صَرِيَمةٍ إِبْرَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣٠">
      <مصراع>وَرَمَى دَوابِرَهَا السَّفَا وَتَهَيَّجَتْ</مصراع>
      <مصراع>رِيحُ الَمصَايِفِ سَوْمُهَا وَسِهامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣١">
      <مصراع>فَتَنَازَعَا سَبِطاً يَطِيرُ ظِلالُهُ</مصراع>
      <مصراع>كَدُخَانِ مُشْعَلةً يُشَبُّ ضِرامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣٢">
      <مصراع>مَشْمُولَةٍ غُلِئَتْ بِنَابِتِ عَرْفَجِ</مصراع>
      <مصراع>كَدُخَانِ نارٍ ساطِعٍ أَسْنَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣٣">
      <مصراع>فَمضَى وَقَدَّمَهَا وكانَتْ عادَةً</مصراع>
      <مصراع>مِنْهُ إِذَا هِيَ عَرَّدَتْ إِقْدَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣٤">
      <مصراع>فَتَوَ سَّطا عُرْضَ الْسّرِيِّ وَصَدَّعَا</مصراع>
      <مصراع>مَسْجُورَةً مُتَجَاوِراً قُلاُمها</مصراع>
   </بيت>

   <بيت رقم="٣٥">
      <مصراع>مَحْفُوفَةً وَسْطَ الْيَرَاعِ يُظِلّهَا</مصراع>
      <مصراع>مِنْهُ مُصَرَّعُ غابَةٍ وَقِيَامُها</مصراع>
   </بيت>

   <بيت رقم="٣٦">
      <مصراع>أَفَتِلْكَ أَمْ وَحشِيَّةٌ مَسْبَوعَةٌ</مصراع>
      <مصراع>خَذَلَتْ وَهَادِيَةُ الصِّوَارِ قِوامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣٧">
      <مصراع>خَنْسَاءُ ضَيَّعَتِ الْفَرِيرَ فَلَمْ يَرِمْ</مصراع>
      <مصراع>عُرْضَ الْشَّقَائِقِ طَوْفُهَا وَبُغَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٣٨">
      <مصراع>لِمعَفَّرٍ قَهْدٍ تَنَازَعُ شِلْوَهُ</مصراع>
      <مصراع>غُبْسٌ كَواِسبُ لا يُمَنَّ طَعامُها</مصراع>
   </بيت>

   <بيت رقم="٣٩">
      <مصراع>صَادَفْنَ منهَا غِرَّةً فَأَصَبْنَهَا</مصراع>
      <مصراع>إِنَّ الَمنايَا لا تَطِيشُ سِهَامُها</مصراع>
   </بيت>

   <بيت رقم="٤٠">
      <مصراع>بَاَتتْ وَأَسْبَلَ وَاكِفٌ من دِيَمةٍ</مصراع>
      <مصراع>يُرْوِي الْخَمائِلَ دائِماً تَسْجَامُها</مصراع>
   </بيت>

   <بيت رقم="٤١">
      <مصراع>يَعْلُو طَرِيقَةَ مَتْنِهَا مُتَوَاتِرٌ</مصراع>
      <مصراع>فِي لَيْلَةٍ كَفَرَ النُّجُومَ غَمَامُها</مصراع>
   </بيت>

   <بيت رقم="٤٢">
      <مصراع>تَجَتَافُ أَصْلاً قالِصاً مُتَنَبِّذاً</مصراع>
      <مصراع>بعُجُوبِ أَنْقَاءِ يَميلُ هُيامُها</مصراع>
   </بيت>

   <بيت رقم="٤٣">
      <مصراع>وَتُضِيءُ في وَجْهِ الظَّلامِ مُنِيرَةً</مصراع>
      <مصراع>كَجُمَانَةِ الْبَحْرِيِّ سُلَّ نِظامها</مصراع>
   </بيت>

   <بيت رقم="٤٤">
      <مصراع>حَتَّى إِذَا انْحَسَرَ الْظلامُ وَأَسْفَرَتْ</مصراع>
      <مصراع>بَكَرَتْ تَزِلُّ عَنِ الثَّرَى أَزْلاُمها</مصراع>
   </بيت>

   <بيت رقم="٤٥">
      <مصراع>عَلِهَتْ تَرَدَّدُ في نِهاءِ صُعَائِدٍ</مصراع>
      <مصراع>سَبْعاً تُؤاماً كاملاً أَيَّامُها</مصراع>
   </بيت>

   <بيت رقم="٤٦">
      <مصراع>حتى إِذا يَئِسَتْ وأَسْحَقَ خَالِقٌ</مصراع>
      <مصراع>لم يُبْلِهِ إِرْضَاعُها وَفِطامُها</مصراع>
   </بيت>

   <بيت رقم="٤٧">
      <مصراع>فَتَوَّجستْ رِزَّ الأَنِيسِ فَراعَها</مصراع>
      <مصراع>عنْ ظَهْرِ غَيْبٍ وَالأَنِيسُ سقامُها</مصراع>
   </بيت>

   <بيت رقم="٤٨">
      <مصراع>فَغَدَتْ كِلا الْفَرْجَيْنِ تَحْسبُ أَنَّهُ</مصراع>
      <مصراع>مُوْلُى الَمخَافَةِ خَلْفُهَا وَأَمَامُها</مصراع>
   </بيت>

   <بيت رقم="٤٩">
      <مصراع>حتى إِذا يَئِسَ الرُّمَاةُ وَأَرْسَلُوا</مصراع>
      <مصراع>غُضْفاً دَوَاجِنَ قافِلاً أَعْصامُها</مصراع>
   </بيت>

   <بيت رقم="٥٠">
      <مصراع>فَلَحِقْنَ وَاعْتَكَرَتْ لها مَدْرِيَّةٌ</مصراع>
      <مصراع>كالسَّمْهَرِيَّةِ حَدُّهَا وَتَمامُها</مصراع>
   </بيت>

   <بيت رقم="٥١">
      <مصراع>لِتَذُودَهُنَّ وَأَيْقَنَتْ إِنْ لم تُذُدْ</مصراع>
      <مصراع>أَنْ قَدْ أَحَمَّ مِنَ الحُتُوفِ حِمامُها</مصراع>
   </بيت>

   <بيت رقم="٥٢">
      <مصراع>فَتَقصَّدَتْ مِنْهَا كَسَابِ فَضُرِّجَتْ</مصراع>
      <مصراع>بِدَمٍ وَغُودِرَ في الَمكَرِّ سُخَامُها</مصراع>
   </بيت>

   <بيت رقم="٥٣">
      <مصراع>فَبِتِلْكَ إِذْ رَقَصَ اللَّوَامعُ بالضُّحى</مصراع>
      <مصراع>وَاجْتَابَ أَرْدِيَةَ السَّرابِ إِكامُهَا</مصراع>
   </بيت>

   <بيت رقم="٥٤">
      <مصراع>أَقْضِي اللُّبَانَةَ لا أُفَرِّطُ رِيبَةً</مصراع>
      <مصراع>أَوْ أَنْ يَلُومَ بحاجَةٍ لَوَّامُها</مصراع>
   </بيت>

   <بيت رقم="٥٥">
      <مصراع>أَوَ لَمْ تَكُنْ تَدْرِي نَوَارُ بأنَّني</مصراع>
      <مصراع>وَصَّالُ عَقْدِ حَبَائِلٍ جَذَّامُها</مصراع>
   </بيت>

   <بيت رقم="٥٦">
      <مصراع>تَرَّاكُ أَمْكِنَةٍ إِذا لمْ أَرْضَها</مصراع>
      <مصراع>أَوْ يَعْتَلِقْ بَعْضَ النُّفُوسِ حمَامُها</مصراع>
   </بيت>

   <بيت رقم="٥٧">
      <مصراع>بلْ أَنْتِ لا تَدْرِينُ كَمْ مِن لَيْلَةٍ</مصراع>
      <مصراع>طَلْقٍ لَذِيذٍ لَهْوُهَا وَنِدَامُهَا</مصراع>
   </بيت>

   <بيت رقم="٥٨">
      <مصراع>قَدْ بِتُّ سامِرَها وَغَايَةَ تاجرٍ</مصراع>
      <مصراع>وَافَيْتُ إِذْ رُفِعَتْ وعَزَّ مُدَامُها</مصراع>
   </بيت>

   <بيت رقم="٥٩">
      <مصراع>أُغْلي السِّباءَ بكُلِّ أَدْكَنَ عاتِقٍ</مصراع>
      <مصراع>أَوْ جَوْنَةٍ قُدِحَتْ وَفُضَّ خِتامُها</مصراع>
   </بيت>

   <بيت رقم="٦٠">
      <مصراع>بِصَبُوحِ صَافِيَةٍ وَجَذْبٍ كَرِينَةٍ</مصراع>
      <مصراع>بِمُوَترٍ تَأْتَاُلهُ إِبْهَامُها</مصراع>
   </بيت>

   <بيت رقم="٦١">
      <مصراع>باكَرْتُ حاجَتَها الدَّجَاجَ بِسُحْرَةٍ</مصراع>
      <مصراع>لاِ عَلِّ مِنهَا حينَ هَب نِيامُها</مصراع>
   </بيت>

   <بيت رقم="٦٢">
      <مصراع>وَغَدَاةَ رِيحٍ قَدْ وَزَعْتُ وقِرَّةٍ</مصراع>
      <مصراع>قد أَصْبَحَتْ بيَدِ الشَّمالِ زِمامُها</مصراع>
   </بيت>

   <بيت رقم="٦٣">
      <مصراع>وَلَقَدْ حَمَيْتُ الحَيَّ تحْمِلُ شِكَّتي</مصراع>
      <مصراع>فُرْطٌ وِشاِحي إِذْ غَدَوْتُ لِجامُها</مصراع>
   </بيت>

   <بيت رقم="٦٤">
      <مصراع>فَعَلَوْتُ مُرْتَقَباً على ذِي هَبْوَةٍ</مصراع>
      <مصراع>حَرْجٍ إِلَى أَعْلاَمِهِنَّ قَتامُها</مصراع>
   </بيت>

   <بيت رقم="٦٥">
      <مصراع>حتّى إِذا أَلْقَتْ يَداً في كافِرٍ</مصراع>
      <مصراع>وَأَجَنَّ عَوْراتِ الثُّغورِ ظَلامُها</مصراع>
   </بيت>

   <بيت رقم="٦٦">
      <مصراع>أَسْهَلْتُ وَانْتَصَبَت كَجِذْعِ مُنِيفَةٍ</مصراع>
      <مصراع>جَرْداءَ يَحْصَرُ دُونَها جُرَّامُها</مصراع>
   </بيت>

   <بيت رقم="٦٧">
      <مصراع>رَفّعْتُها طَرْدَ النّعامِ وَشَلهُ</مصراع>
      <مصراع>حتّى إِذا سَخِنَتْ وَخَفّ عِظامُها</مصراع>
   </بيت>

   <بيت رقم="٦٨">
      <مصراع>قَلِقَتْ رِحَالَتُها وَأَسْبَلَ نَحْرُها</مصراع>
      <مصراع>وَابْتَلَّ مِن زَبَدِ الحَمِيمِ حزَامُها</مصراع>
   </بيت>

   <بيت رقم="٦٩">
      <مصراع>تَرْقَى وَتَطْعَنُ في الْعِنانِ وَتَنْتَحِي</مصراع>
      <مصراع>ورْدَ الْحَمامَةِ إِذْ أَجَدَّ حمامُها</مصراع>
   </بيت>

   <بيت رقم="٧٠">
      <مصراع>وَكَثِيرَةٍ غُربَاؤُها مَجْوُلَةٍ</مصراع>
      <مصراع>تُرْجَى نَوَافِلُها ويُخْشى ذَامُها</مصراع>
   </بيت>

   <بيت رقم="٧١">
      <مصراع>غُلْبٍ تَشَذَّرُ بالدُخولِ كأنّها</مصراع>
      <مصراع>جِنُّ الْبَدِيِّ رَوِاسياً أَقْدَامُها</مصراع>
   </بيت>

   <بيت رقم="٧٢">
      <مصراع>أَنْكَرْتُ باطِلَها وُبؤْتُ بِحَقِّها</مصراع>
      <مصراع>عِندِي ولم يَفْخَرْ عَلَيَّ كِرامُها</مصراع>
   </بيت>

   <بيت رقم="٧٣">
      <مصراع>وَجزُورِ أَيْسارٍ دَعَوْتُ لِحَتْفِها</مصراع>
      <مصراع>بِمَغَالِقٍ مُتَشابِهٍ أَجْسامُها</مصراع>
   </بيت>

   <بيت رقم="٧٤">
      <مصراع>أَدْعُو بِهِنَّ لِعَاقِرٍ أَوْ مُطْفِلٍ</مصراع>
      <مصراع>بُذِلَت لجيرانِ الَجميعِ لحِامُها</مصراع>
   </بيت>

   <بيت رقم="٧٥">
      <مصراع>فَالضَّيْفَ وَالجارُ الَجنِيبُ كَأَنَّما</مصراع>
      <مصراع>هَبَطَا تَبالَةَ مُخْصِباً أَهْضامُها</مصراع>
   </بيت>

   <بيت رقم="٧٦">
      <مصراع>تأوِي إِلى الأطْنابِس كلُّ رِذِيَّةٍ</مصراع>
      <مصراع>مِثْلِ الْبَلِيَّةِ قالِصٍ أَهْدامُها</مصراع>
   </بيت>

   <بيت رقم="٧٧">
      <مصراع>وُيكَلِّوُنَ إِذَا الرِّيَاحُ تَناوَحتْ</مصراع>
      <مصراع>خُلُجاً تُمَدُّ شَوارِعاً أَيْتامُها</مصراع>
   </بيت>

   <بيت رقم="٧٨">
      <مصراع>إِنّا إِذا الْتَقَتِ المجامِعُ لَمْ يَزلْ</مصراع>
      <مصراع>مِنّا لزِازُ عَظِيمَةٍ جَشَّامُها</مصراع>
   </بيت>

   <بيت رقم="٧٩">
      <مصراع>وُمقَسِّمٌ يُعْطِي الْعشِيرةَ حَقَّها</مصراع>
      <مصراع>ومُغَذْمِرٌ لِحُقُوقِها هَضّامُها</مصراع>
   </بيت>

   <بيت رقم="٨٠">
      <مصراع>فَضلاً وذُو كرمٍ يُعِينُ على النَّدى</مصراع>
      <مصراع>سَمْحٌ كَسُوبُ رَغائِبٍ غَنّامُها</مصراع>
   </بيت>

   <بيت رقم="٨١">
      <مصراع>مِنْ مَعْشَرٍ سَنَّتْ لَهُمْ آباؤهُمْ</مصراع>
      <مصراع>ولِكُلِّ قَوْمٍ سُنّةٌ وإِمامُها</مصراع>
   </بيت>

   <بيت رقم="٨٢">
      <مصراع>لا يَطْبَعُون ولا يَبُورُ فَعالُهُمْ</مصراع>
      <مصراع>إِذْ لا يَميلْ مَعَ الْهوى أَحْلامُها</مصراع>
   </بيت>

   <بيت رقم="٨٣">
      <مصراع>فَاقْنَعْ بما قَسَمَ الَملِيكُ فإِنّما</مصراع>
      <مصراع>قَسَمَ الَخلائِق بَيْنَنا عَلاُمها</مصراع>
   </بيت>

   <بيت رقم="٨٤">
      <مصراع>وَإِذا الأَمانةُ قُسِّمَتْ في مَعْشَر</مصراع>
      <مصراع>أَوْفَى بِأوْفَرِ حَظّنا قَسّامُها</مصراع>
   </بيت>

   <بيت رقم="٨٥">
      <مصراع>فَبَني لَنا بَيْتاً رَفِيعاً سَمْكُهُ</مصراع>
      <مصراع>فَسَما إِلَيْهِ كَهْلُها وغُلامُها</مصراع>
   </بيت>

   <بيت رقم="٨٦">
      <مصراع>وهُمُ السّعادةُ اذَا الْعَشيرَةُ أُفْظِعَتْ</مصراع>
      <مصراع>وهُمُ فَوارِسُها وَهُمْ حُكّامُها</مصراع>
   </بيت>

   <بيت رقم="٨٧">
      <مصراع>وهُمُ رَبيعٌ للْمُجاوِرِ فِيهِمُ</مصراع>
      <مصراع>والُمرْمِلاتِ إِذا تَطاوَلَ عامُها</مصراع>
   </بيت>

   <بيت رقم="٨٨">
      <مصراع>وهُمُ الْعَشِيرَةُ أَنْ يُبَطِّىْءَ حاسِدٌ</مصراع>
      <مصراع>أَوْ أَنْ يَميلَ مَعَ الْعَدُوِّ لِئَامُها</مصراع>
   </بيت>

</قصيدة>