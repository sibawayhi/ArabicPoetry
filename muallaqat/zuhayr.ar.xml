<قصيدة>
   <عنوان>معلقة زهير بن أبي سلمى</عنوان>

   <بيت رقم="١">
      <مصراع>أَمِنْ أُمِّ أَوْفَي دِمْنَةٌ لَمْ تَكَلَّمِ</مصراع>
      <مصراع>بِحَوْمَانَةِ الدَّرَّاجِ فَالُمتَثَلّمِ</مصراع>
   </بيت>

   <بيت رقم="٢">
      <مصراع>وَدَارٌ لها بالرَّقْمتَيْنِ كأَنَّهَا</مصراع>
      <مصراع>مَرَاجِيعُ وَشْمٍ فِي نَوَاشِرِ مِعْصَمِ</مصراع>
   </بيت>

   <بيت رقم="٣">
      <مصراع>بِهَا الْعَيْنُ وَالأَرْآمُ يْمَشِينَ خِلْفَةً</مصراع>
      <مصراع>وَأَطْلاَؤُهَا يَنْهَضْنَ مِنْ كُلِّ مَجْثَمِ</مصراع>
   </بيت>

   <بيت رقم="٤">
      <مصراع>وَقَفْتُ بِهَا من بعْدَ عِشْرِينَ حِجَّةً</مصراع>
      <مصراع>فَلأْياً عَرَفْتُ الدَّارَ بَعْدَ تَوَهُّمِ</مصراع>
   </بيت>

   <بيت رقم="٥">
      <مصراع>أَثَافِي سُفْعًا فِي مُعَرَّسِ مِرْجَلٍ</مصراع>
      <مصراع>وَنُؤْياً كَجِذْمِ الْحوْضِ لم يتَثَلَّمِ</مصراع>
   </بيت>

   <بيت رقم="٦">
      <مصراع>فَلَمَّا عَرَفْتُ الدَّارَ قُلْتُ لِرَبْعِهَا</مصراع>
      <مصراع>أَلا أنْعِمْ صَبَاحاً أَيُّهَا الرَّبْعُ وَاسْلَمِ</مصراع>
   </بيت>

   <بيت رقم="٧">
      <مصراع>تَبَصَّر خَلِيلي هَلْ تَرَى من ظَعائِنٍ</مصراع>
      <مصراع>تَحَمَّلْنَ بالعَلْيَاءِ من فَوْقِ جُرْثُمِ</مصراع>
   </بيت>

   <بيت رقم="٨">
      <مصراع>جَعَلْنَ الْقنانَ عَنْ يَمينٍ وَحَزْنَهُ</مصراع>
      <مصراع>وكَمْ بِالقنانِ مِن مُحِلِّ وَمُحْرِمِ</مصراع>
   </بيت>

   <بيت رقم="٩">
      <مصراع>عَلَوْنَ بأَنْماطٍ عِتَاقٍ وَكِلَّةٍ</مصراع>
      <مصراع>ورَادٍ حَوَاشِيهَا مُشَاكهةَ الدَّمِ</مصراع>
   </بيت>

   <بيت رقم="١٠">
      <مصراع>وَوَرَّكْنَ فِي الْسُّوبانِ يَعْلُونَ مَتْنَهُ</مصراع>
      <مصراع>عَلَيْهِنَّ دَلُّ النَّاعِمِ المتَنَعِّمِ</مصراع>
   </بيت>

   <بيت رقم="١١">
      <مصراع>بَكًرْنَ بُكُوراً وَاسْتَحَزْنَ بِسُحْرةٍ</مصراع>
      <مصراع>فَهُنَّ وَوَادِى الرَّسِّ كاليَدِ لِلْفَمِ</مصراع>
   </بيت>

   <بيت رقم="١٢">
      <مصراع>وَفيهِنَّ مَلْهَىً لَّلطِيفِ وَمَنْظَرٌ</مصراع>
      <مصراع>أَنِيقٌ لِعَيْنِ الْنَّاظِرِ الُمتَرَسِّمِ</مصراع>
   </بيت>

   <بيت رقم="١٣">
      <مصراع>كَأَنَّ فتَاتَ الْعِهْنِ في كلِّ مَنْزِلٍ</مصراع>
      <مصراع>نَزَلْنَ بهِ حَبُّ الْفَنَا لم يحَطمِ</مصراع>
   </بيت>

   <بيت رقم="١٤">
      <مصراع>فَلَمَّا وَرَدْنَ الَماءَ زُرْقاً جِمَامُهُ</مصراع>
      <مصراع>وَضَعْنَ عِصِيّ الْحَاضِرِ الُمتَخَيِّمِ</مصراع>
   </بيت>

   <بيت رقم="١٥">
      <مصراع>ظَهَرْنَ مِنَ السُّوبانِ ثُمَّ جَزْعْنَهُ</مصراع>
      <مصراع>على كلِّ قَيْنيِّ قَشِيبٍ وَمُفْأَمِ</مصراع>
   </بيت>

   <بيت رقم="١٦">
      <مصراع>فَأَقْسَمْتُ بالبَيْتِ الّذِي طافَ حوْلَهُ</مصراع>
      <مصراع>رِجالُ بَنَوْهُ مِن قُرَيشٍ وَجُرْهُمِ</مصراع>
   </بيت>

   <بيت رقم="١٧">
      <مصراع>يَميناً لَنِعْمَ الْسَّيِّدانِ وُجِدْتَما</مصراع>
      <مصراع>على كلِّ حالٍ من سَحيلٍ وَمُبْرَمِ</مصراع>
   </بيت>

   <بيت رقم="١٨">
      <مصراع>تَدَارَ كُتما عَبْساً وَذُبْيَانَ بَعْدمَا</مصراع>
      <مصراع>تَفَانَوْا وَدُّقوا بَيْنَهُمْ عِطْر مَنْشِمِ</مصراع>
   </بيت>

   <بيت رقم="١٩">
      <مصراع>وقَدْ قُلْتُما: إِنْ نُدْرِكِ السِّلْمَ واسِعاً</مصراع>
      <مصراع>بمالٍ ومَعْروفٍ من الْقَوْلِ نَسْلَمِ</مصراع>
   </بيت>

   <بيت رقم="٢٠">
      <مصراع>فَأَصْبَحْتُما منها على خَيرِ مَوْطِنٍ</مصراع>
      <مصراع>بَعِيدَيْن فيها مِنْ عُقُوقٍ ومَأْثَمِ</مصراع>
   </بيت>

   <بيت رقم="٢١">
      <مصراع>عَظِيمْينِ فِي عُلْيَا مَعدِّ هُديِتُما</مصراع>
      <مصراع>ومَنْ يَسْتَبِحْ كنزاً من الَمجدِ يَعْظُمِ</مصراع>
   </بيت>

   <بيت رقم="٢٢">
      <مصراع>تُعَفَّى الكُلُومُ بالِمئينَ فأصْبَحَتْ</مصراع>
      <مصراع>يُنَجِّمُهَا مَنْ لَيْسَ فِيهَا بِمُجْرِمِ</مصراع>
   </بيت>

   <بيت رقم="٢٣">
      <مصراع>يُنَجِّمُهَا قَوْمٌ لِقَوْمٍ غَرامَةً</مصراع>
      <مصراع>وَلم يُهَرِيقُوا بَيْنَهُمْ مِلْءَ مِحْجَمِ</مصراع>
   </بيت>

   <بيت رقم="٢٤">
      <مصراع>فأصْبَحَ يَجَرِي فيهمُ منِ تلادِكُمْ</مصراع>
      <مصراع>مَغَانمُ شَىَّ مِنْ إِفَالٍ مُزَنّمِ</مصراع>
   </بيت>

   <بيت رقم="٢٥">
      <مصراع>أَلا أَبْلِغِ الأَحْلافَ عني رِسَالَةً</مصراع>
      <مصراع>وَذُبيَانَ هل أَقْسَمْتُم كلَّ مُقْسَمِ</مصراع>
   </بيت>

   <بيت رقم="٢٦">
      <مصراع>فَلا تَكْتُمُنَّ اللهَ ما في نُفُوسِكمْ</مصراع>
      <مصراع>لِيَخْفَى ومَهْما يُكْتمِ اللهُ يَعْلَمِ</مصراع>
   </بيت>

   <بيت رقم="٢٧">
      <مصراع>يُؤَخَّرْ فيُوضَعْ فِي كِتَابٍ فَيُدَّخَرْ</مصراع>
      <مصراع>لِيَوْمِ الحِسابِ أَوْ يُعَجَّلْ فيُنْقَمِ</مصراع>
   </بيت>

   <بيت رقم="٢٨">
      <مصراع>وَمَا الحَرْبُ إِلا ما عَلِمْتُم وَذُقْتُمُ</مصراع>
      <مصراع>ومَا ُهَو عَنْهَا بالحَديثِ الُمرَجَّمِ</مصراع>
   </بيت>

   <بيت رقم="٢٩">
      <مصراع>مَتَى تَبْعَثُوها تَبْعَثُوها ذَميمَةً</مصراع>
      <مصراع>وَتَضْرَ إِذا ضَرَّيْتُمُوها فَتَضْرَم</مصراع>
   </بيت>

   <بيت رقم="٣٠">
      <مصراع>فَتَعْرُكُكْم عرْكَ الرّحى بثِقالها</مصراع>
      <مصراع>وَتَلْقَحْ كِشَافاً ثمَّ تُنْتَجْ فَتُتْئِمِ</مصراع>
   </بيت>

   <بيت رقم="٣١">
      <مصراع>فَتُنْتِجْ لَكُمْ غلْمانَ أَشأَمَ كّلهمْ</مصراع>
      <مصراع>كأَحْمَرِ عادٍ ثمَّ تُرْضِعْ فَتَفْطِمِ</مصراع>
   </بيت>

   <بيت رقم="٣٢">
      <مصراع>فتُغْلِلْ لكُمْ مَا لا تُغِلُّ لأهْلِهَا</مصراع>
      <مصراع>قُرًى بالعرَاقِ من قَفِيزٍ وَدِرْهَمِ</مصراع>
   </بيت>

   <بيت رقم="٣٣">
      <مصراع>لَعَمْرِي لَنِعْمَ الحَيِّ جَرَّ عليهِمُ</مصراع>
      <مصراع>بمالا يُؤاتِيهمْ حَصينُ بنُ ضَمضمِ</مصراع>
   </بيت>

   <بيت رقم="٣٤">
      <مصراع>وكانَ طوَى كَشْحاً على مُسْتَكِنّةِ</مصراع>
      <مصراع>فَلا هُوَ أَبْداها ولَمْ يَتَقَدَّمِ</مصراع>
   </بيت>

   <بيت رقم="٣٥">
      <مصراع>وقَالَ سأقْضِي حاجتي ثُمَّ أَتَّقِي</مصراع>
      <مصراع>عَدُوِّي بأَلْفٍ مِنْ وَرَائِيَ مُلَجَمِ</مصراع>
   </بيت>

   <بيت رقم="٣٦">
      <مصراع>فَشَدَّ فَلَمْ يُفْزِعْ بُيُوتاً كثيرةً</مصراع>
      <مصراع>لدى حَيْثُ أَلْقَتْ رَحْلَها أَمُّ قَشْعَمِ</مصراع>
   </بيت>

   <بيت رقم="٣٧">
      <مصراع>لدى أَسَدٍ شاكي السِّلاحِ مُقَذَّفٍ</مصراع>
      <مصراع>لَهُ لِبَدٌ أَظْفَارُهُ لَمْ تُقَلَّمِ</مصراع>
   </بيت>

   <بيت رقم="٣٨">
      <مصراع>جَرِيءِ مَتى يُظْلَمْ يُعَاقِبْ بِظْلمِهِ</مصراع>
      <مصراع>سَريعاً، وَإِلا يُبْدَ بالظلمِ يَظْلِمِ</مصراع>
   </بيت>

   <بيت رقم="٣٩">
      <مصراع>دعوا ظِمأَهْم حتَّى إِذا تَم أوْرَدُوا</مصراع>
      <مصراع>غِماراً تَفَرَّى بالسِّلاحِ وبالدَّمِ</مصراع>
   </بيت>

   <بيت رقم="٤٠">
      <مصراع>فَقَضَّوا مَنايا بَيْنَهُم ثمَّ أَصْدَروا</مصراع>
      <مصراع>إِلى كلإِ مُسْتَوْبِلٍ مُتَوَخِّمِ</مصراع>
   </بيت>

   <بيت رقم="٤١">
      <مصراع>لَعَمرُكَ ما جَرَّتْ عَلَيْهِمْ رِمَاحُهمْ</مصراع>
      <مصراع>دَمَ ابْنِ نَهِيكٍ أَوْ قَتِيلِ الُمثَلّمِ</مصراع>
   </بيت>

   <بيت رقم="٤٢">
      <مصراع>وَلا شَاركَتْ في الَموْتِ فِي دَمِ نَوْفَل</مصراع>
      <مصراع>وَلا وَهَبِ مِنْها وَلا ابنِ الُمَخَّزمِ</مصراع>
   </بيت>

   <بيت رقم="٤٣">
      <مصراع>فكُلاَّ أَرَاهُمْ أَصْبَحُوا يَعْقِلُونَهُ</مصراع>
      <مصراع>صَحِيحاتِ مالٍ طالِعاتٍ بِمَخْرِمِ</مصراع>
   </بيت>

   <بيت رقم="٤٤">
      <مصراع>لِحَيِّ حِلالٍ يَعصِمُ الْنَّاسَ أَمْرُهُمْ</مصراع>
      <مصراع>إِذَا طَرَقَتْ إِحْدى اللَّيالي بُمعْظَمِ</مصراع>
   </بيت>

   <بيت رقم="٤٥">
      <مصراع>كِرامٍ فَلاذُو الضِّغْنِ يُدْرِكُ تَبْلَهُ</مصراع>
      <مصراع>وَلا الَجارِمُ الجَاني عَلَيْهم بُمسْلَمِ</مصراع>
   </بيت>

   <بيت رقم="٤٦">
      <مصراع>سَئِمْتُ تَكالِيفَ الحَيَاةِ وَمَنْ يَعِشْ</مصراع>
      <مصراع>ثَمانِينَ حَولاً لا أَبا لَكِ يَسأمِ</مصراع>
   </بيت>

   <بيت رقم="٤٧">
      <مصراع>وَأَعْلَمُ مَا فِي الْيَوْمِ وَالأَمْسِ قَبْلَهُ</مصراع>
      <مصراع>وَلكِنَّني عن عِلْمِ مَا فِي غَدٍ عَمِ</مصراع>
   </بيت>

   <بيت رقم="٤٨">
      <مصراع>رَأَيْتُ الَمنايَا خَبْطَ عَشْوَاءَ مَن تُصِبْ</مصراع>
      <مصراع>تُمِتْهُ وَمِنْ تُخْطِئْ يُعَمَّرْ فَيَهْرَمِ</مصراع>
   </بيت>

   <بيت رقم="٤٩">
      <مصراع>وَمَنْ لم يُصانِعْ في أْمُورٍ كَثِيرَةٍ</مصراع>
      <مصراع>يُضَرَّسْ بِأَنْيَابٍ وَيُوطَأْ بِمَنْسِمِ</مصراع>
   </بيت>

   <بيت رقم="٥٠">
      <مصراع>وَمَنْ يَجْعلِ المعْروفَ مِن دُونِ عِرْضِهِ</مصراع>
      <مصراع>يَفِرْهُ وَمَنْ لا يَتَّقِ الشَّتْمَ يُشْتَمِ</مصراع>
   </بيت>

   <بيت رقم="٥١">
      <مصراع>وَمَنْ يَكُ ذا فَضْلٍ فَيَبْخَلْ بفَضلِهِ</مصراع>
      <مصراع>على قَوْمِهِ يُسْتَعْنَ عنْهُ وَيُذْمَمِ</مصراع>
   </بيت>

   <بيت رقم="٥٢">
      <مصراع>وَمَنْ يُوفِ لا يُذْمَمْ وَمن يُهدَ قلبُهُ</مصراع>
      <مصراع>إِلى مُطْمَئِنِّ الْبِرِّ لا يَتَجَمْجمِ</مصراع>
   </بيت>

   <بيت رقم="٥٣">
      <مصراع>وَمَنْ هَابَ أَسْبَابَ الَمنَايَا يَنَلْنَهُ</مصراع>
      <مصراع>وَإِنْ يَرْقَ أَسْبَابَ السَّمَاءِ بِسُلَّمِ</مصراع>
   </بيت>

   <بيت رقم="٥٤">
      <مصراع>وَمَنْ يَجْعَلِ الَمعْرُوفَ في غَيْرِ أَهْلِهِ</مصراع>
      <مصراع>يَكُنْ حَمْدُهُ ذَمّاً عَلَيْهِ وَيَنْدَمِ</مصراع>
   </بيت>

   <بيت رقم="٥٥">
      <مصراع>وَمَن يَعْضِ أَطْرَافَ الزِّجاج فإِنَّهُ</مصراع>
      <مصراع>يُطيعُ الْعَواِلي رُكِّبَتْ كلَّ لَهْذَمِ</مصراع>
   </بيت>

   <بيت رقم="٥٦">
      <مصراع>وَ‍مَنْ لَمْ يَذُدْ عَنْ حَوْضِهِ بِسِلاِحهِ</مصراع>
      <مصراع>يُهَدَّمْ وَمَنْ لا يَظلمِ الْنّاسَ يُظَلمِ</مصراع>
   </بيت>

   <بيت رقم="٥٧">
      <مصراع>وَمَنْ يَغْتَرِبْ يَحْسِبْ عدُوَّا صَدِيقَهُ</مصراع>
      <مصراع>وَمَنْ لَمْ يُكَرِّمْ نَفْسَهُ لم يكَرَّمِ</مصراع>
   </بيت>

   <بيت رقم="٥٨">
      <مصراع>وَمَهْمَا تَكُنْ عِنْدَ امْرِىءِ مِنْ خْلِيقَةٍ</مصراع>
      <مصراع>وَإِنْ خَالَها تَخْفَى على النّاسِ تُعْلَمِ</مصراع>
   </بيت>

   <بيت رقم="٥٩">
      <مصراع>وكائنْ تَرَى من صامِتٍ لَكَ مُعْجِبٍ</مصراع>
      <مصراع>زِيَادَتُهُ أَوْ نَقْصُهُ فِي التَّكَلّمِ</مصراع>
   </بيت>

   <بيت رقم="٦٠">
      <مصراع>لسانُ الفَتَى نِصْفٌ وَنِصْفٌ فؤَادُهُ</مصراع>
      <مصراع>فلَمْ يَبْقَ إِلا صورَةُ اللَّحْمِ والدَّمِ</مصراع>
   </بيت>

   <بيت رقم="٦١">
      <مصراع>وَإِنَّ سَفَاهَ الْشَّيْخِ لا حِلْمَ بَعْدَهُ</مصراع>
      <مصراع>وَإِنَّ الْفَتَى بَعْدَ الْسَّفَاهَةِ يَحْلُمِ</مصراع>
   </بيت>

   <بيت رقم="٦٢">
      <مصراع>سأَلْنا فَأَعْطَيْتُمْ وَعُدْنَا فَعُدْتُمْ</مصراع>
      <مصراع>وَمَنْ أَكْثَرَ التّسآلَ يَوماً سَيُحْرَمِ</مصراع>
   </بيت>

</قصيدة>