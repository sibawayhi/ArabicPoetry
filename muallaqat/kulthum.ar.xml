<قصيدة>
   <عنوان>معلقة عمرو بن كلثوم</عنوان>

   <بيت رقم="١">
      <مصراع>وَلا تُبْقِي خُمورَ الأَندَرِينا</مصراع>
      <مصراع>أَلا هُبِّي بصَحْنِكِ فَاصْبَحينا</مصراع>
   </بيت>

   <بيت رقم="٢">
      <مصراع>إِذا ما الماءُ خالَطَها سَخِينا</مصراع>
      <مصراع>مُشَعْشَعَةً كانَّ الحُصَّ فيها</مصراع>
   </بيت>

   <بيت رقم="٣">
      <مصراع>إِذا مَا ذاقَها حَتَّى يَلِينا</مصراع>
      <مصراع>تَجُورُ بذي اللُّبَانَةِ عَنْ هَوَاهُ</مصراع>
   </بيت>

   <بيت رقم="٤">
      <مصراع>عَلَيْهِ لمِالِهِ فيها مُهينا</مصراع>
      <مصراع>تَرَى الّلحِزَ الشّحيحَ إِذا أُمِرَّتْ</مصراع>
   </بيت>

   <بيت رقم="٥">
      <مصراع>وكانَ الْكَأْسُ مَجْراها الْيَمِينا</مصراع>
      <مصراع>صَبَنْتِ الْكَأْسَ عَنّا أُمَّ عَمْرٍو</مصراع>
   </بيت>

   <بيت رقم="٦">
      <مصراع>بِصاحِبِكِ الّذِي لا تصْبَحِينا</مصراع>
      <مصراع>وَمَا شَرُّ الثّلاثَةِ أُمَّ عَمْروٍ</مصراع>
   </بيت>

   <بيت رقم="٧">
      <مصراع>وَأُخْرَى في دِمَشْقَ وَقَاصِرِينا</مصراع>
      <مصراع>وَكَأسٍ قَدْ شَرِبْتُ بِبَعْلَبَكِّ</مصراع>
   </بيت>

   <بيت رقم="٨">
      <مصراع>مُقَدَّرَةً لَنا وَمُقَدِّرِينا</مصراع>
      <مصراع>وَإِنَّا سَوْفَ تُدْرِكُنا الَمنَايَا</مصراع>
   </بيت>

   <بيت رقم="٩">
      <مصراع>نُخَبِّرْكِ الْيَقِينَ وَتُخْبِرِينا</مصراع>
      <مصراع>قِفِي قَبْلَ التَّفَرُّقِ يَا ظَعِينا</مصراع>
   </بيت>

   <بيت رقم="١٠">
      <مصراع>لِوَ شْكِ الْبَيْنِ أَمْ خُنْتِ اْلأَمِينَا</مصراع>
      <مصراع>قِفِي نَسْأَلْكِ هَلْ أَحْدَثْتِ صِرْماً</مصراع>
   </بيت>

   <بيت رقم="١١">
      <مصراع>أَقَرَّ بِهِ مَواليكِ الْعُيُونا</مصراع>
      <مصراع>بِيَوْمِ كَرِيهَةٍ ضَرْباً وَطَعْناً</مصراع>
   </بيت>

   <بيت رقم="١٢">
      <مصراع>وَبَعْدَ غَدٍ بِما لا تَعْلَمِينا</مصراع>
      <مصراع>وَإِنَّ غَداً وإِنَّ الْيَوْمَ رَهْنٌ</مصراع>
   </بيت>

   <بيت رقم="١٣">
      <مصراع>وَقَدْ أَمِنَتْ عُيُونَ الْكَاشِحِينَا</مصراع>
      <مصراع>تُرِيكَ إِذا دَخَلْتَ عَلى خَلاءٍ</مصراع>
   </بيت>

   <بيت رقم="١٤">
      <مصراع>هِجَانِ اللَّوْنِ لَمْ تَقْرَأ جَنِينَا</مصراع>
      <مصراع>ذِرَاعَي عَيْطَلٍ أَدْمَاءَ بَكْرٍ</مصراع>
   </بيت>

   <بيت رقم="١٥">
      <مصراع>حَصَاناً مِنْ أَكُفِّ الّلامِسِينا</مصراع>
      <مصراع>وَثَدْياً مِثْلَ حُقِّ الْعَاجِ رَخْصاً</مصراع>
   </بيت>

   <بيت رقم="١٦">
      <مصراع>رَوَادِفُها تَنُوءُ بِما وَلِينا</مصراع>
      <مصراع>وَمَتْنَيْ لَدْنَةٍ سَمَقَتْ وَطَالَتْ</مصراع>
   </بيت>

   <بيت رقم="١٧">
      <مصراع>وَكَشْحاً قَدْ جُنِنْتُ بِهِ جُنُونا</مصراع>
      <مصراع>وَمَأْكَمةً يَضِيقُ الْبَابُ عَنْها</مصراع>
   </بيت>

   <بيت رقم="١٨">
      <مصراع>يَرِنُّ خَشَاشُ حَلْيِهِما رَنِينا</مصراع>
      <مصراع>وَسَارِيَتَيْ بِلَنْطٍ أَوْ رُخامٍ</مصراع>
   </بيت>

   <بيت رقم="١٩">
      <مصراع>أَضَلَّتْهُ فَرَجَّعَتِ الَحنِينا</مصراع>
      <مصراع>فَما وَجَدْتْ كَوَجْدِي أُمُّ َسْقبٍ</مصراع>
   </بيت>

   <بيت رقم="٢٠">
      <مصراع>لَها مِنْ تِسْعَةٍ إِلا جَنِينا</مصراع>
      <مصراع>وَلا شَمْطَاءُ لَمْ يَتْرُكْ شَقاها</مصراع>
   </بيت>

   <بيت رقم="٢١">
      <مصراع>رَأَيْتُ حُمُولَهَا أُصُلاً حُدِينا</مصراع>
      <مصراع>تَذَكَّرْتُ الصِّبَا وَاشْتَقْتُ لَمَّا</مصراع>
   </بيت>

   <بيت رقم="٢٢">
      <مصراع>كأَسْيَافٍ بِأَيْدِي مُصْلَتِينَا</مصراع>
      <مصراع>فَأَعْرَضَتِ الْيَمامَةُ وَأشْمَخَرَّتْ</مصراع>
   </بيت>

   <بيت رقم="٢٣">
      <مصراع>وَأَنْظِرْنا نُخَبِّرْكَ الْيَقِينا</مصراع>
      <مصراع>أَبَا هِنْدٍ فَلا تَعْجَلْ عَلَيْنا</مصراع>
   </بيت>

   <بيت رقم="٢٤">
      <مصراع>وَنُصْدِرُهُنَّ حُمْراً قَدْ رَوِينا</مصراع>
      <مصراع>بأَنَّا نُورِدُ الرَّايَاتِ بِيضاً</مصراع>
   </بيت>

   <بيت رقم="٢٥">
      <مصراع>عَصَيْنا الَملْكَ فيهَا أَنْ نَدِينا</مصراع>
      <مصراع>وَأَيَّامِ لَنَا عزِّ طِوَالٍ</مصراع>
   </بيت>

   <بيت رقم="٢٦">
      <مصراع>بِتَاجِ الُملْكِ يَحْمِي الُمْحَجرِينا</مصراع>
      <مصراع>وَسَيِّدِ مَعْشَر قَدْ تَوَّجُوهُ</مصراع>
   </بيت>

   <بيت رقم="٢٧">
      <مصراع>مُقَلَّدَةً أَعِنَّتَها صُفُونا</مصراع>
      <مصراع>تَرَكْنا الَخيْلَ عَاكِفَةً عَلَيْهِ</مصراع>
   </بيت>

   <بيت رقم="٢٨">
      <مصراع>إِلَى الشَّامَاتِ تَنْفِي الُموِعدِينا</مصراع>
      <مصراع>وَأَنْزَلْنا الْبُيُوتَ بِذِي طُلُوحٍ</مصراع>
   </بيت>

   <بيت رقم="٢٩">
      <مصراع>وَشَذَّ ْبنا قَتادَةَ مَنَ يَلِينا</مصراع>
      <مصراع>وَقَدْ هَرَّتْ كلابُ الَحيِّ مِنَّا</مصراع>
   </بيت>

   <بيت رقم="٣٠">
      <مصراع>يَكُونُوا فِي الِّلقَاءِ لَها طَحِينا</مصراع>
      <مصراع>مَتَى نَنْقُلْ إِلى قَوْمٍ رَحَانا</مصراع>
   </بيت>

   <بيت رقم="٣١">
      <مصراع>وَلَهْوَتُها قُضاعَةَ أَجْمَعينا</مصراع>
      <مصراع>يَكُونُ ثِفَاُلهَا شَرْقِيَّ نَجْدٍ</مصراع>
   </بيت>

   <بيت رقم="٣٢">
      <مصراع>فَأعْجَلْنا الْقِرَى أَنْ تَشْتِمُونا</مصراع>
      <مصراع>نَزَلْتُمْ مَنْزِلَ الأَضْيَافِ مِنَّا</مصراع>
   </بيت>

   <بيت رقم="٣٣">
      <مصراع>قُبَيْلَ الصُّبْحِ مِرْدَاةً طَحُونا</مصراع>
      <مصراع>قَرَيْنَاكُمْ فَعَجَّلْنا قِرَاكُمْ</مصراع>
   </بيت>

   <بيت رقم="٣٤">
      <مصراع>وَنَحْمِلُ عَنْهُمُ مَا حَمَّلُونا</مصراع>
      <مصراع>نَعُمُّ أُنَاسَنا وَنَعِفُّ عَنْهُمْ</مصراع>
   </بيت>

   <بيت رقم="٣٥">
      <مصراع>وَنَضْرِبُ بِالسُّيُوفِ إِذَا غُشِينا</مصراع>
      <مصراع>نُطَاعِنُ مَا تَراخَى النّاسُ عَنَّا</مصراع>
   </بيت>

   <بيت رقم="٣٦">
      <مصراع>ذَوَابِلَ أَوْ بِبِيضٍ يَخْتَلِينا</مصراع>
      <مصراع>بِسُمْرٍ مِنْ قَنا الَخطِّيِّ لُدْنٍ</مصراع>
   </بيت>

   <بيت رقم="٣٧">
      <مصراع>وَسُوقٌ بِالأَمَاعِزِ يَرْتَمِينا</مصراع>
      <مصراع>كأَنَّ جَمَاجِمَ الأَبطَالِ فِيها</مصراع>
   </بيت>

   <بيت رقم="٣٨">
      <مصراع>وَنَخْتَلِبُ الرِّقَابَ فَتَخْتَلينا</مصراع>
      <مصراع>نَشُقُّ بِهَا رُؤُوسَ الْقَوْمِ شَقا</مصراع>
   </بيت>

   <بيت رقم="٣٩">
      <مصراع>عَلَيْكَ وَيُخْرِجُ الدَّاءَ الدَّفِينا</مصراع>
      <مصراع>وَإِنُّ الضِّعْنَ بَعْدَ الْضِّعْنِ يَبْدُو</مصراع>
   </بيت>

   <بيت رقم="٤٠">
      <مصراع>نُطَاعِنُ دُونَهُ حَتَّى يَبِينا</مصراع>
      <مصراع>وَرِثْنا الَمجْدَ قَدْ عَلَمِتْ مَعَدٌّ</مصراع>
   </بيت>

   <بيت رقم="٤١">
      <مصراع>عَنِ الأَحْفَاضِ نَمْنَعُ مَنْ يَلينا</مصراع>
      <مصراع>وَنَحْنُ إِذا عِمادُ الْحَيِّ خَرَّتْ</مصراع>
   </بيت>

   <بيت رقم="٤٢">
      <مصراع>فَما يَدْرُونَ مَاذا يَتَّقُونا</مصراع>
      <مصراع>نَجُدُّ رُؤُوسَهُمْ فِي غَيْرِ بِرٍّ</مصراع>
   </بيت>

   <بيت رقم="٤٣">
      <مصراع>مَخَارِيقٌ بِأَيْدِي لاعِبِينا</مصراع>
      <مصراع>كأَنَّ سُيُوفَنا مِنّا وَمِنْهُم</مصراع>
   </بيت>

   <بيت رقم="٤٤">
      <مصراع>خُضِبْنَ بِأُرْجُوانٍ أَوْ طُلِينا</مصراع>
      <مصراع>كانَّ ثِيابَنا مِنّا وَمِنْهُمُ</مصراع>
   </بيت>

   <بيت رقم="٤٥">
      <مصراع>مِنَ الَهوْلِ الُمَشَّبهِ أَنْ يَكُونا</مصراع>
      <مصراع>إِذا ما عَيَّ بالإِسْنافِ حَيٌّ</مصراع>
   </بيت>

   <بيت رقم="٤٦">
      <مصراع>مُحَافَظَةً وكُنّا الْسّابِقِينا</مصراع>
      <مصراع>نَصَبْنا مِثْلَ رَهْوَةَ ذَاتَ حَدِّ</مصراع>
   </بيت>

   <بيت رقم="٤٧">
      <مصراع>وَشِيبٍ في الُحرُوبِ مُجَرَّبِينا</مصراع>
      <مصراع>بِشُبَّانٍ يَرَوْنَ الْقَتْلَ مَجْداً</مصراع>
   </بيت>

   <بيت رقم="٤٨">
      <مصراع>مُقَارَعَةً بَنيهِمْ عَنْ بَنِينا</مصراع>
      <مصراع>حُدَيَّا النّاسِ كُلّهِمُ جَمِيعاً</مصراع>
   </بيت>

   <بيت رقم="٤٩">
      <مصراع>فَتُصْبِحُ خَيْلُنا عُصَباً نُبِينا</مصراع>
      <مصراع>فَأَمَّا يَوْمَ خَشْيَتِنا عَلَيْهِمْ</مصراع>
   </بيت>

   <بيت رقم="٥٠">
      <مصراع>فَنُمْعِنُ غَارَةً مُتَلَبِّبِينا</مصراع>
      <مصراع>وَأَمَّا يَوْمَ لا نَخْشَى عَلَيْهِمْ</مصراع>
   </بيت>

   <بيت رقم="٥١">
      <مصراع>نَدُقُّ بِهِ السُّهُولَةَ وَالُحزُونَا</مصراع>
      <مصراع>بِرَأْسٍ مِنْ بَني جُشَمِ بْنِ بَكْرٍ</مصراع>
   </بيت>

   <بيت رقم="٥٢">
      <مصراع>تَضَعْضعْنا وَأَنَّا قَدُ وَنِينا</مصراع>
      <مصراع>أَلا لا يَعْلَمُ الأَقْوامُ أَنَّا</مصراع>
   </بيت>

   <بيت رقم="٥٣">
      <مصراع>فَنَجْهَلُ فَوْقَ جَهْلِ الَجاهِلِينا</مصراع>
      <مصراع>أَلا لا يَجْهَلَنْ أَحَدٌ عَلَيْنَا</مصراع>
   </بيت>

   <بيت رقم="٥٤">
      <مصراع>نَكُونُ لِقِيلِكُمْ فيها قَطينا</مصراع>
      <مصراع>بأيِّ مَشِيئَة عَمْرَو بْنَ هِنْدٍ</مصراع>
   </بيت>

   <بيت رقم="٥٥">
      <مصراع>تُطيع بِنا الْوُشَاةَ وَتَزْدَرِينا</مصراع>
      <مصراع>بأَيِّ مَشِيئَة عَمْرَو بْنَ هِنْدٍ</مصراع>
   </بيت>

   <بيت رقم="٥٦">
      <مصراع>مَتى كُنّا لأُمِّكَ مَقْتَوِينا</مصراع>
      <مصراع>تَهَدَّدْنا وَأَوْعِدْنَا رُوَيْداً</مصراع>
   </بيت>

   <بيت رقم="٥٧">
      <مصراع>عَلى الأَعْدَاءِ قَبْلَكَ أَنْ تَلِينا</مصراع>
      <مصراع>فَإِنَّ قَنَاتَنا يا عَمْرُو أَعْيَتْ</مصراع>
   </بيت>

   <بيت رقم="٥٨">
      <مصراع>وَوَلَّتْهُ عَشَوْزَنَةً زَبُونا</مصراع>
      <مصراع>إِذا عَضَّ الثِّقافُ بها اشْمأَزَّتْ</مصراع>
   </بيت>

   <بيت رقم="٥٩">
      <مصراع>تَشُجُّ قَفَا الُمثَقِّفِ وَالَجبِينا</مصراع>
      <مصراع>عَشَوْزَنَةً إِذا انْقَلَبَتْ أَرَنَّتْ</مصراع>
   </بيت>

   <بيت رقم="٦٠">
      <مصراع>بِنَقْصٍ في خُطُوبِ الأَوَّلِينا</مصراع>
      <مصراع>فَهَلْ حُدِّثْتَ في جُشَمِ بْنِ بَكْرٍ</مصراع>
   </بيت>

   <بيت رقم="٦١">
      <مصراع>أَباحَ لَنَا حُصُونَ الَمجْدِ دِينا</مصراع>
      <مصراع>وَرِثْنا مَجْدَ عَلْقَمَةَ بنِ سَيْفٍ</مصراع>
   </بيت>

   <بيت رقم="٦٢">
      <مصراع>زُهَيْراً نِعْمَ ذُخْرِ الذّاخِرينا</مصراع>
      <مصراع>وَرِثْتُ مُهَلْهِلاً وَالْخَيرَ مِنْهُ</مصراع>
   </بيت>

   <بيت رقم="٦٣">
      <مصراع>بِهِمْ نِلْنا تُراثَ الأكْرَمِينا</مصراع>
      <مصراع>وَعَتَّاباً وَكُلْثُوماً جَمِيعاً</مصراع>
   </بيت>

   <بيت رقم="٦٤">
      <مصراع>بِهِ نُحْمَى وَنَحْمِي الُمحْجَرينا</مصراع>
      <مصراع>وَذا الْبُرَةِ الَّذِي حُدِّثْتَ عَنْهُ</مصراع>
   </بيت>

   <بيت رقم="٦٥">
      <مصراع>فأيُّ الَمجْدِ إِلا قَدْ وَلِينا</مصراع>
      <مصراع>وَمِنَّا قَبْلَةُ الْسّاعِي كُلَيْبٌ</مصراع>
   </بيت>

   <بيت رقم="٦٦">
      <مصراع>تَجُذَّ الْحَبْلَ أَوْ تَقِصِ الْقَرِينا</مصراع>
      <مصراع>مَتَى نَعْقِدْ قَرِينَتَنا بِحَبْلٍ</مصراع>
   </بيت>

   <بيت رقم="٦٧">
      <مصراع>وَأَوْفاهُمْ إِذا عَقَدُوا يَمينا</مصراع>
      <مصراع>وَنُوَجدُ نَحْنُ أَمْنَعَهُمْ ذِمَاراً</مصراع>
   </بيت>

   <بيت رقم="٦٨">
      <مصراع>رَفَدْنَا فَوْقَ رِفْدِ الرافِدِينا</مصراع>
      <مصراع>وَنَحْنُ غَداةَ أُوِقدَ في خَزَازَى</مصراع>
   </بيت>

   <بيت رقم="٦٩">
      <مصراع>تَسَفُّ الجِلّةُ الْخُورُ الدَّرِينا</مصراع>
      <مصراع>وَنَحْنُ الَحابِسُونَ بِذِي أَرَاطَى</مصراع>
   </بيت>

   <بيت رقم="٧٠">
      <مصراع>وَنَحْنُ الْعَازِمُونَ إِذا عُصِينا</مصراع>
      <مصراع>وَنَحْنُ الْحَاِكُمونَ إِذا أُطِعْنا</مصراع>
   </بيت>

   <بيت رقم="٧١">
      <مصراع>وَنَحْنُ الآخِذُونَ لِما رَضِينا</مصراع>
      <مصراع>وَنحْنُ التَّارِكُونَ لِما سَخِطْنا</مصراع>
   </بيت>

   <بيت رقم="٧٢">
      <مصراع>وَكاَنَ الأَيْسَرِينَ بَنُو أَبِينا</مصراع>
      <مصراع>وَكُنَّا الأَيْمَنِينَ إِذا الْتَقَيْنا</مصراع>
   </بيت>

   <بيت رقم="٧٣">
      <مصراع>وَصُلْنا صَوْلَةً فيمَنْ يَلِينا</مصراع>
      <مصراع>فَصَالُوا صَوْلَةً فِيمَنْ يَلِيهِمْ</مصراع>
   </بيت>

   <بيت رقم="٧٤">
      <مصراع>وَإِبْنا بالُمُلوكِ مُصَفَّدِينا</مصراع>
      <مصراع>فآبُوا بالنِّهابِ وبالسَّبايا</مصراع>
   </بيت>

   <بيت رقم="٧٥">
      <مصراع>أَلَمَّا تَعْرِفُوا مِنَّا الْيَقِينا</مصراع>
      <مصراع>إِلَيْكُمْ يا بَني بَكْرٍ إِلَيْكُم</مصراع>
   </بيت>

   <بيت رقم="٧٦">
      <مصراع>كَتَائِبَ يَطَّعِنَّ وَيَرْتَمِينا</مصراع>
      <مصراع>أَلَمَّا تَعْلَمُوا مِنّا وَمِنْكم</مصراع>
   </بيت>

   <بيت رقم="٧٧">
      <مصراع>وَأَسْيَافٌ يَقُمْنَ وَيَنْحَنِينا</مصراع>
      <مصراع>عَلَيْنا الْبَيْضُ وَالْيَلَبُ الْيَماني</مصراع>
   </بيت>

   <بيت رقم="٧٨">
      <مصراع>تَرَى فَوْقَ النِّطاقِ لها غُضونا</مصراع>
      <مصراع>عَلَيْنا كُلُّ سَابِغَةٍ دِلاصٍ</مصراع>
   </بيت>

   <بيت رقم="٧٩">
      <مصراع>رَأَيْتَ لَها جُلودَ الْقَوْمِ جُونا</مصراع>
      <مصراع>إِذا وُضِعَتْ عَنِ الأَبْطالِ يَوْماً</مصراع>
   </بيت>

   <بيت رقم="٨٠">
      <مصراع>تُصَفِّقُهَا الرِّيَاحُ إِذا جَرَيْنا</مصراع>
      <مصراع>كأَنَّ عُضُونَهُنَّ مُتُونُ غَدْر</مصراع>
   </بيت>

   <بيت رقم="٨١">
      <مصراع>عُرِفْنَ لَنا نَقَائِذَ وَافْتُلِينا</مصراع>
      <مصراع>وَتََحْمِلُنا غَداةَ الرَّوْعِ جُرْدٌ</مصراع>
   </بيت>

   <بيت رقم="٨٢">
      <مصراع>كامثال الرِّصائِعِ قَدْ بَلِينا</مصراع>
      <مصراع>وَرَدْنَ دَوَارِعاً وَخَرَجْنَ شُعْثاً</مصراع>
   </بيت>

   <بيت رقم="٨٣">
      <مصراع>وَنُورِثُها إِذا مُتْنا بَنِيْنا</مصراع>
      <مصراع>وَرِثْناهُنَّ عَنْ آبَاءِ صِدْقٍ</مصراع>
   </بيت>

   <بيت رقم="٨٤">
      <مصراع>نُحَاذِرُ أَنْ تُقَسَّمَ أَوْ تَهونا</مصراع>
      <مصراع>عَلى آثَارِنَا بِيضٌ حِسانٌ</مصراع>
   </بيت>

   <بيت رقم="٨٥">
      <مصراع>إِذَا لاقُوْا كَتَائِبَ مُعْلِمِينَا</مصراع>
      <مصراع>أَخذْن عَلى بُعُولَتِهِنَّ عَهْداً</مصراع>
   </بيت>

   <بيت رقم="٨٦">
      <مصراع>وَأَسْرَى فِي الْحَدِيدِ مُقَرَّنِيناً</مصراع>
      <مصراع>لَيَسْتَلِبُنَّ أَفْرَاساً وَبِيضاً</مصراع>
   </بيت>

   <بيت رقم="٨٧">
      <مصراع>قَدِ اتَّخَذُوا مَخَافَتَنا قَرِينا</مصراع>
      <مصراع>تَرَانَا بَارِزِينَ وَكُلُّ حَيِّ</مصراع>
   </بيت>

   <بيت رقم="٨٨">
      <مصراع>كَما اضْطَرَبَتْ مُتُونُ الشَّارِبِينا</مصراع>
      <مصراع>إِذا مارُحْنَ يَمْشِينَ الُهوَيْنَى</مصراع>
   </بيت>

   <بيت رقم="٨٩">
      <مصراع>بُعُولَتَنَا إِذَا لَمْ تَمْنَعونا</مصراع>
      <مصراع>يَقُتْنَ جِيادَنَا وَيَقُلْنَ لَسْتُمْ</مصراع>
   </بيت>

   <بيت رقم="٩٠">
      <مصراع>خَلَطْنَ بِميسَمٍ حَسَباً وَدِينا</مصراع>
      <مصراع>ظَعائِنَ مِنْ بَني جشَمِ بِنِ بَكْرٍ</مصراع>
   </بيت>

   <بيت رقم="٩١">
      <مصراع>تَرَى مِنْهُ الْسَّواعِدَ كالقُلِينا</مصراع>
      <مصراع>وَمَا مَنَعَ الْظَّعائِنَ مِثْلُ ضَرْبٍ</مصراع>
   </بيت>

   <بيت رقم="٩٢">
      <مصراع>وَلَدْنا الْنَّاسَ طُرَّا أَجْمَعِينا</مصراع>
      <مصراع>كأَنَّا وَالْسُّيُوفُ مُسَلَّلاتٌ</مصراع>
   </بيت>

   <بيت رقم="٩٣">
      <مصراع>حَزَاوِرَةٌ بأَبْطَحِهَا الْكُرِينا</مصراع>
      <مصراع>يُدَهْدُونَ الرُّؤُوسَ كما تُدَهْدِي</مصراع>
   </بيت>

   <بيت رقم="٩٤">
      <مصراع>إِذَا قُبَبٌ بِأَبْطَحِهَا بُنِينا</مصراع>
      <مصراع>وَقَدْ عَلِمَ الْقَبَائِلُ مِنْ مَعَدِّ</مصراع>
   </بيت>

   <بيت رقم="٩٥">
      <مصراع>وَأَنَّا الُمهْلِكُونَ إِذَا ابْتُلِينا</مصراع>
      <مصراع>بِأَنّا الُمطْعِمُونَ إِذَا قَدَرْنَا</مصراع>
   </بيت>

   <بيت رقم="٩٦">
      <مصراع>وَأَنَّا الْنَّازِلُونَ بِحَيْثُ شِينا</مصراع>
      <مصراع>وَأَنَّا الَمانِعُونَ لِما أَرَدْنا</مصراع>
   </بيت>

   <بيت رقم="٩٧">
      <مصراع>وَأَنّا الآخِذُونَ إِذَا رَضِينا</مصراع>
      <مصراع>وَأَنّا التَّارِكُونَ إِذَا سَخِطْنَا</مصراع>
   </بيت>

   <بيت رقم="٩٨">
      <مصراع>وَأَنّا الْعازِمُونَ إِذَا عُصِينا</مصراع>
      <مصراع>وَأَنّا الْعَاصِمُونَ إِذَا أُطِعْنْا</مصراع>
   </بيت>

   <بيت رقم="٩٩">
      <مصراع>وَيَشْرَبُ غَيْرُنَا كَدِراً وَطِينا</مصراع>
      <مصراع>وَنَشْرَبُ إِنْ وَرَدْنَا الَماءَ صَفْواً</مصراع>
   </بيت>

   <بيت رقم="١٠٠">
      <مصراع>وَدُعْمِيًّا فَكَيْفَ وَجَدْتُمونا</مصراع>
      <مصراع>أَلا أَبْلِغْ بَني الْطَّمَّاحِ عَنَّا</مصراع>
   </بيت>

   <بيت رقم="١٠١">
      <مصراع>أَبَيْنا أَنْ نُقِرَّ الذُّلَّ فِينا</مصراع>
      <مصراع>إِذَا مَا الَملْكُ سَامَ الْنَّاسَ خَسْفاً</مصراع>
   </بيت>

   <بيت رقم="١٠٢">
      <مصراع>وَمَاءَ الْبَحْرِ نَمَلؤُهُ سَفِينا</مصراع>
      <مصراع>مَلاَنا الْبَرَّ حَتَّى ضَاقَ عَنَّا</مصراع>
   </بيت>

   <بيت رقم="١٠٣">
      <مصراع>تَخِرُّ لَهُ الْجَبابِرُ ساجِدِينا</مصراع>
      <مصراع>إِذا بَلَغَ الْفِطَامَ لَنا صَبِيٌّ</مصراع>
   </بيت>

</قصيدة>